<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_report_cashflow" model="ir.actions.report">
            <field name="name">Cash Flow Statement</field>
            <field name="model">idil.cashflow.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">idil.report_cashflow_template</field>
            <field name="report_file">idil.report_cashflow_template</field>
            <field name="binding_model_id" ref="model_idil_cashflow_report_wizard"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_cashflow_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Cash Flow Statement</h2>
                            <h4><t t-esc="company_name"/></h4>
                            <p>From <span t-esc="start_date"/> To <span t-esc="end_date"/></p>
                        </div>
                        
                        <table class="table table-sm table-striped mt-4">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- OPERATING ACTIVITIES -->
                                <tr class="table-primary">
                                    <td colspan="2" class="font-weight-bold">OPERATING ACTIVITIES</td>
                                </tr>
                                <tr t-if="operating_inflows">
                                    <td colspan="2" class="pl-3 font-weight-bold">Cash Inflows:</td>
                                </tr>
                                <tr t-foreach="operating_inflows" t-as="item">
                                    <td class="pl-5"><t t-esc="item['name']"/></td>
                                    <td class="text-right"><span t-esc="item['amount']" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/></td>
                                </tr>
                                <tr t-if="operating_outflows">
                                    <td colspan="2" class="pl-3 font-weight-bold">Cash Outflows:</td>
                                </tr>
                                <tr t-foreach="operating_outflows" t-as="item">
                                    <td class="pl-5"><t t-esc="item['name']"/></td>
                                    <td class="text-right">(<span t-esc="item['amount']" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/> )</td>
                                </tr>
                                <tr class="font-weight-bold bg-light">
                                    <td class="pl-3">Net Cash from Operating Activities</td>
                                    <td class="text-right"><span t-esc="net_operating" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/></td>
                                </tr>

                                <!-- INVESTING ACTIVITIES -->
                                <tr class="table-info">
                                    <td colspan="2" class="font-weight-bold">INVESTING ACTIVITIES</td>
                                </tr>
                                <tr t-if="investing_inflows">
                                    <td colspan="2" class="pl-3 font-weight-bold">Cash Inflows:</td>
                                </tr>
                                <tr t-foreach="investing_inflows" t-as="item">
                                    <td class="pl-5"><t t-esc="item['name']"/></td>
                                    <td class="text-right"><span t-esc="item['amount']" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/></td>
                                </tr>
                                <tr t-if="investing_outflows">
                                    <td colspan="2" class="pl-3 font-weight-bold">Cash Outflows:</td>
                                </tr>
                                <tr t-foreach="investing_outflows" t-as="item">
                                    <td class="pl-5"><t t-esc="item['name']"/></td>
                                    <td class="text-right">(<span t-esc="item['amount']" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/> )</td>
                                </tr>
                                <tr class="font-weight-bold bg-light">
                                    <td class="pl-3">Net Cash from Investing Activities</td>
                                    <td class="text-right"><span t-esc="net_investing" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/></td>
                                </tr>

                                <!-- FINANCING ACTIVITIES -->
                                <tr class="table-warning">
                                    <td colspan="2" class="font-weight-bold">FINANCING ACTIVITIES</td>
                                </tr>
                                <tr t-if="financing_inflows">
                                    <td colspan="2" class="pl-3 font-weight-bold">Cash Inflows:</td>
                                </tr>
                                <tr t-foreach="financing_inflows" t-as="item">
                                    <td class="pl-5"><t t-esc="item['name']"/></td>
                                    <td class="text-right"><span t-esc="item['amount']" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/></td>
                                </tr>
                                <tr t-if="financing_outflows">
                                    <td colspan="2" class="pl-3 font-weight-bold">Cash Outflows:</td>
                                </tr>
                                <tr t-foreach="financing_outflows" t-as="item">
                                    <td class="pl-5"><t t-esc="item['name']"/></td>
                                    <td class="text-right">(<span t-esc="item['amount']" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/> )</td>
                                </tr>
                                <tr class="font-weight-bold bg-light">
                                    <td class="pl-3">Net Cash from Financing Activities</td>
                                    <td class="text-right"><span t-esc="net_financing" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/></td>
                                </tr>

                                <!-- NET CHANGE -->
                                <tr class="table-success font-weight-bold">
                                    <td class="pl-2">NET CHANGE IN CASH</td>
                                    <td class="text-right"><span t-esc="net_cash_flow" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
