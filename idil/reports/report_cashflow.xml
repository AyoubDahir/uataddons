<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_report_cashflow" model="ir.actions.report">
            <field name="name">Cash Flow Statement</field>
            <field name="model">idil.cashflow.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">idil.report_cashflow_template</field>
            <field name="report_file">idil.report_cashflow_template</field>
            <field name="binding_model_id" ref="model_idil_cashflow_report_wizard"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_cashflow_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: 'Segoe UI', Arial, sans-serif;">
                        <!-- Report Header -->
                        <div style="background-color: #1a237e; color: white; padding: 20px; margin-bottom: 25px; border-bottom: 4px solid #3949ab;">
                            <h1 style="font-size: 24px; font-weight: bold; margin: 0 0 8px 0; color: white;">Statement of Cash Flows</h1>
                            <div style="font-size: 16px; color: white; margin-bottom: 5px;"><t t-esc="company_name"/></div>
                            <div style="font-size: 12px; color: #c5cae9;">
                                For the Period: <strong style="color: white;"><t t-esc="start_date"/></strong> to <strong style="color: white;"><t t-esc="end_date"/></strong>
                            </div>
                        </div>

                        <!-- Cash Flow Table -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 10px; font-size: 11px;">
                            <thead>
                                <tr style="background-color: #f5f5f5;">
                                    <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: left; font-weight: bold; color: #333; width: 70%;">Description</th>
                                    <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: right; font-weight: bold; color: #333; width: 30%;">Amount (USD)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- ═══════════════ OPERATING ACTIVITIES ═══════════════ -->
                                <tr style="background-color: #e8eaf6;">
                                    <td colspan="2" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                        ► CASH FLOWS FROM OPERATING ACTIVITIES
                                    </td>
                                </tr>
                                
                                <!-- Operating Inflows -->
                                <t t-if="operating_inflows">
                                    <tr style="background-color: #fafafa;">
                                        <td colspan="2" style="padding: 10px 10px 10px 20px; font-weight: 600; color: #5c6bc0; font-style: italic; border-bottom: 1px solid #e0e0e0;">Cash Received:</td>
                                    </tr>
                                    <t t-foreach="operating_inflows" t-as="item">
                                        <tr>
                                            <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="item['name']"/></td>
                                            <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                                $<t t-esc="'{:,.2f}'.format(item['amount'])"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="item.get('ledgers', [])" t-as="ledger">
                                            <tr style="background-color: #fafafa;">
                                                <td style="padding: 4px 10px 4px 55px; color: #757575; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    <span style="color: #9e9e9e;"><t t-esc="ledger['code']"/></span> - <t t-esc="ledger['name']"/>
                                                </td>
                                                <td style="padding: 4px 10px; text-align: right; color: #66bb6a; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    $<t t-esc="'{:,.2f}'.format(ledger['amount'])"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                
                                <!-- Operating Outflows -->
                                <t t-if="operating_outflows">
                                    <tr style="background-color: #fafafa;">
                                        <td colspan="2" style="padding: 10px 10px 10px 20px; font-weight: 600; color: #5c6bc0; font-style: italic; border-bottom: 1px solid #e0e0e0;">Cash Paid:</td>
                                    </tr>
                                    <t t-foreach="operating_outflows" t-as="item">
                                        <tr>
                                            <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="item['name']"/></td>
                                            <td style="padding: 8px 10px; text-align: right; color: #c62828; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                                ($<t t-esc="'{:,.2f}'.format(item['amount'])"/>)
                                            </td>
                                        </tr>
                                        <t t-foreach="item.get('ledgers', [])" t-as="ledger">
                                            <tr style="background-color: #fafafa;">
                                                <td style="padding: 4px 10px 4px 55px; color: #757575; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    <span style="color: #9e9e9e;"><t t-esc="ledger['code']"/></span> - <t t-esc="ledger['name']"/>
                                                </td>
                                                <td style="padding: 4px 10px; text-align: right; color: #ef5350; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    ($<t t-esc="'{:,.2f}'.format(ledger['amount'])"/>)
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                
                                <!-- Operating Subtotal -->
                                <tr style="background-color: #f5f5f5;">
                                    <td style="padding: 12px 10px 12px 20px; font-weight: bold; border-top: 1px solid #bdbdbd; border-bottom: 2px solid #9e9e9e;">Net Cash from Operating Activities</td>
                                    <td style="padding: 12px 10px; text-align: right; font-weight: bold; border-top: 1px solid #bdbdbd; border-bottom: 2px solid #9e9e9e;">
                                        <t t-if="net_operating >= 0">
                                            <span style="color: #2e7d32;">$<t t-esc="'{:,.2f}'.format(net_operating)"/></span>
                                        </t>
                                        <t t-else="">
                                            <span style="color: #c62828;">($<t t-esc="'{:,.2f}'.format(abs(net_operating))"/>)</span>
                                        </t>
                                    </td>
                                </tr>

                                <!-- Spacer -->
                                <tr><td colspan="2" style="height: 10px;"></td></tr>

                                <!-- ═══════════════ INVESTING ACTIVITIES ═══════════════ -->
                                <tr style="background-color: #e8eaf6;">
                                    <td colspan="2" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                        ► CASH FLOWS FROM INVESTING ACTIVITIES
                                    </td>
                                </tr>
                                
                                <!-- Investing Inflows -->
                                <t t-if="investing_inflows">
                                    <tr style="background-color: #fafafa;">
                                        <td colspan="2" style="padding: 10px 10px 10px 20px; font-weight: 600; color: #5c6bc0; font-style: italic; border-bottom: 1px solid #e0e0e0;">Proceeds from:</td>
                                    </tr>
                                    <t t-foreach="investing_inflows" t-as="item">
                                        <tr>
                                            <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="item['name']"/></td>
                                            <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                                $<t t-esc="'{:,.2f}'.format(item['amount'])"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="item.get('ledgers', [])" t-as="ledger">
                                            <tr style="background-color: #fafafa;">
                                                <td style="padding: 4px 10px 4px 55px; color: #757575; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    <span style="color: #9e9e9e;"><t t-esc="ledger['code']"/></span> - <t t-esc="ledger['name']"/>
                                                </td>
                                                <td style="padding: 4px 10px; text-align: right; color: #66bb6a; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    $<t t-esc="'{:,.2f}'.format(ledger['amount'])"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                
                                <!-- Investing Outflows -->
                                <t t-if="investing_outflows">
                                    <tr style="background-color: #fafafa;">
                                        <td colspan="2" style="padding: 10px 10px 10px 20px; font-weight: 600; color: #5c6bc0; font-style: italic; border-bottom: 1px solid #e0e0e0;">Payments for:</td>
                                    </tr>
                                    <t t-foreach="investing_outflows" t-as="item">
                                        <tr>
                                            <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="item['name']"/></td>
                                            <td style="padding: 8px 10px; text-align: right; color: #c62828; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                                ($<t t-esc="'{:,.2f}'.format(item['amount'])"/>)
                                            </td>
                                        </tr>
                                        <t t-foreach="item.get('ledgers', [])" t-as="ledger">
                                            <tr style="background-color: #fafafa;">
                                                <td style="padding: 4px 10px 4px 55px; color: #757575; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    <span style="color: #9e9e9e;"><t t-esc="ledger['code']"/></span> - <t t-esc="ledger['name']"/>
                                                </td>
                                                <td style="padding: 4px 10px; text-align: right; color: #ef5350; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    ($<t t-esc="'{:,.2f}'.format(ledger['amount'])"/>)
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                
                                <!-- Show empty state if no investing activities -->
                                <t t-if="not investing_inflows and not investing_outflows">
                                    <tr>
                                        <td style="padding: 8px 10px 8px 35px; color: #9e9e9e; font-style: italic; border-bottom: 1px solid #eeeeee;">No investing activities</td>
                                        <td style="padding: 8px 10px; text-align: right; color: #9e9e9e; border-bottom: 1px solid #eeeeee;">—</td>
                                    </tr>
                                </t>
                                
                                <!-- Investing Subtotal -->
                                <tr style="background-color: #f5f5f5;">
                                    <td style="padding: 12px 10px 12px 20px; font-weight: bold; border-top: 1px solid #bdbdbd; border-bottom: 2px solid #9e9e9e;">Net Cash from Investing Activities</td>
                                    <td style="padding: 12px 10px; text-align: right; font-weight: bold; border-top: 1px solid #bdbdbd; border-bottom: 2px solid #9e9e9e;">
                                        <t t-if="net_investing > 0">
                                            <span style="color: #2e7d32;">$<t t-esc="'{:,.2f}'.format(net_investing)"/></span>
                                        </t>
                                        <t t-elif="net_investing == 0">
                                            <span>$0.00</span>
                                        </t>
                                        <t t-else="">
                                            <span style="color: #c62828;">($<t t-esc="'{:,.2f}'.format(abs(net_investing))"/>)</span>
                                        </t>
                                    </td>
                                </tr>

                                <!-- Spacer -->
                                <tr><td colspan="2" style="height: 10px;"></td></tr>

                                <!-- ═══════════════ FINANCING ACTIVITIES ═══════════════ -->
                                <tr style="background-color: #e8eaf6;">
                                    <td colspan="2" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                        ► CASH FLOWS FROM FINANCING ACTIVITIES
                                    </td>
                                </tr>
                                
                                <!-- Financing Inflows -->
                                <t t-if="financing_inflows">
                                    <tr style="background-color: #fafafa;">
                                        <td colspan="2" style="padding: 10px 10px 10px 20px; font-weight: 600; color: #5c6bc0; font-style: italic; border-bottom: 1px solid #e0e0e0;">Proceeds from:</td>
                                    </tr>
                                    <t t-foreach="financing_inflows" t-as="item">
                                        <tr>
                                            <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="item['name']"/></td>
                                            <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                                $<t t-esc="'{:,.2f}'.format(item['amount'])"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="item.get('ledgers', [])" t-as="ledger">
                                            <tr style="background-color: #fafafa;">
                                                <td style="padding: 4px 10px 4px 55px; color: #757575; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    <span style="color: #9e9e9e;"><t t-esc="ledger['code']"/></span> - <t t-esc="ledger['name']"/>
                                                </td>
                                                <td style="padding: 4px 10px; text-align: right; color: #66bb6a; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    $<t t-esc="'{:,.2f}'.format(ledger['amount'])"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                
                                <!-- Financing Outflows -->
                                <t t-if="financing_outflows">
                                    <tr style="background-color: #fafafa;">
                                        <td colspan="2" style="padding: 10px 10px 10px 20px; font-weight: 600; color: #5c6bc0; font-style: italic; border-bottom: 1px solid #e0e0e0;">Payments for:</td>
                                    </tr>
                                    <t t-foreach="financing_outflows" t-as="item">
                                        <tr>
                                            <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="item['name']"/></td>
                                            <td style="padding: 8px 10px; text-align: right; color: #c62828; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                                ($<t t-esc="'{:,.2f}'.format(item['amount'])"/>)
                                            </td>
                                        </tr>
                                        <t t-foreach="item.get('ledgers', [])" t-as="ledger">
                                            <tr style="background-color: #fafafa;">
                                                <td style="padding: 4px 10px 4px 55px; color: #757575; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    <span style="color: #9e9e9e;"><t t-esc="ledger['code']"/></span> - <t t-esc="ledger['name']"/>
                                                </td>
                                                <td style="padding: 4px 10px; text-align: right; color: #ef5350; font-size: 10px; border-bottom: 1px dotted #e0e0e0;">
                                                    ($<t t-esc="'{:,.2f}'.format(ledger['amount'])"/>)
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                
                                <!-- Show empty state if no financing activities -->
                                <t t-if="not financing_inflows and not financing_outflows">
                                    <tr>
                                        <td style="padding: 8px 10px 8px 35px; color: #9e9e9e; font-style: italic; border-bottom: 1px solid #eeeeee;">No financing activities</td>
                                        <td style="padding: 8px 10px; text-align: right; color: #9e9e9e; border-bottom: 1px solid #eeeeee;">—</td>
                                    </tr>
                                </t>
                                
                                <!-- Financing Subtotal -->
                                <tr style="background-color: #f5f5f5;">
                                    <td style="padding: 12px 10px 12px 20px; font-weight: bold; border-top: 1px solid #bdbdbd; border-bottom: 2px solid #9e9e9e;">Net Cash from Financing Activities</td>
                                    <td style="padding: 12px 10px; text-align: right; font-weight: bold; border-top: 1px solid #bdbdbd; border-bottom: 2px solid #9e9e9e;">
                                        <t t-if="net_financing > 0">
                                            <span style="color: #2e7d32;">$<t t-esc="'{:,.2f}'.format(net_financing)"/></span>
                                        </t>
                                        <t t-elif="net_financing == 0">
                                            <span>$0.00</span>
                                        </t>
                                        <t t-else="">
                                            <span style="color: #c62828;">($<t t-esc="'{:,.2f}'.format(abs(net_financing))"/>)</span>
                                        </t>
                                    </td>
                                </tr>

                                <!-- Spacer -->
                                <tr><td colspan="2" style="height: 15px;"></td></tr>

                                <!-- ═══════════════ GRAND TOTAL ═══════════════ -->
                                <tr style="background-color: #1a237e;">
                                    <td style="padding: 15px 10px; font-weight: bold; font-size: 13px; color: white;">
                                        NET INCREASE (DECREASE) IN CASH
                                    </td>
                                    <td style="padding: 15px 10px; text-align: right; font-weight: bold; font-size: 14px; color: white;">
                                        <t t-if="net_cash_flow >= 0">
                                            $<t t-esc="'{:,.2f}'.format(net_cash_flow)"/>
                                        </t>
                                        <t t-else="">
                                            ($<t t-esc="'{:,.2f}'.format(abs(net_cash_flow))"/>)
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Footer Note -->
                        <div style="text-align: right; font-size: 10px; color: #757575; margin-top: 15px; font-style: italic;">
                            All amounts are expressed in United States Dollars (USD)
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
