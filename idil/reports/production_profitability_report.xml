<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_production_profitability_landscape" model="report.paperformat">
            <field name="name">Production Profitability Landscape</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_report_production_profitability_pdf" model="ir.actions.report">
            <field name="name">Production Profitability</field>
            <field name="model">idil.report.production.profitability</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">idil.report_production_profitability_document</field>
            <field name="report_file">idil.report_production_profitability_document</field>
            <field name="print_report_name">'Production Profitability - %s' % (object.date or 'Report')</field>
            <field name="binding_model_id" ref="model_idil_report_production_profitability"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_production_profitability_landscape"/>
        </record>
    </data>
</odoo>
