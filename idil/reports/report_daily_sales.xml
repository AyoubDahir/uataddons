<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Daily Sales Report Template -->
    <template id="report_daily_sales_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-family: 'Segoe UI', Arial, sans-serif;">
                    <!-- Report Header -->
                    <div style="background-color: #1a237e; color: white; padding: 20px; margin-bottom: 25px; border-bottom: 4px solid #3949ab;">
                        <h1 style="font-size: 24px; font-weight: bold; margin: 0 0 8px 0; color: white;">Daily Sales Report</h1>
                        <div style="font-size: 16px; color: white; margin-bottom: 5px;"><t t-esc="company.name"/></div>
                        <div style="font-size: 12px; color: #c5cae9;">
                            Period: <strong style="color: white;"><t t-esc="start_date"/></strong> to <strong style="color: white;"><t t-esc="end_date"/></strong>
                        </div>
                    </div>

                    <!-- Filter Summary -->
                    <div style="background-color: #f5f5f5; padding: 12px 15px; margin-bottom: 20px; border-radius: 4px; font-size: 11px;">
                        <strong>Filters:</strong>
                        Salesperson: <span style="color: #1a237e;"><t t-esc="salesperson_name"/></span>
                    </div>

                    <t t-set="show_usd" t-value="currency_display in ['usd', 'both']"/>
                    <t t-set="show_shilling" t-value="currency_display in ['shilling', 'both']"/>

                    <!-- Daily Summary Section -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: left; font-weight: bold; color: #333;">Date</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: right; font-weight: bold; color: #333;">Orders</th>
                                <th t-if="show_usd" style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: right; font-weight: bold; color: #333;">Revenue (USD)</th>
                                <th t-if="show_shilling" style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: right; font-weight: bold; color: #333;">Revenue (Shillings)</th>
                                <th t-if="show_usd" style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: right; font-weight: bold; color: #333;">Avg Order (USD)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background-color: #e8eaf6;">
                                <td t-att-colspan="3 + (1 if show_usd else 0) + (1 if show_shilling else 0)" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    ► DAILY SUMMARY
                                </td>
                            </tr>
                            <tr t-foreach="daily_summary" t-as="day">
                                <td style="padding: 8px 10px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="day['sale_date']"/></td>
                                <td style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="day['order_count']"/></td>
                                <td t-if="show_usd" style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                    $<t t-esc="'{:,.2f}'.format(day['revenue_usd'] or 0)"/>
                                </td>
                                <td t-if="show_shilling" style="padding: 8px 10px; text-align: right; color: #424242; border-bottom: 1px solid #eeeeee;">
                                    <t t-esc="'{:,.2f}'.format(day['revenue_shillings'] or 0)"/>
                                </td>
                                <td t-if="show_usd" style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee;">
                                    $<t t-esc="'{:,.2f}'.format(day['avg_order_usd'] or 0)"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Detailed Breakdown (if detailed mode) -->
                    <t t-if="report_type == 'detailed'">
                        <!-- Group data by date -->
                        <t t-foreach="daily_summary" t-as="day">
                            <div style="margin-top: 25px;">
                                <!-- Products Breakdown -->
                                <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; font-size: 11px;">
                                    <thead>
                                        <tr style="background-color: #e8eaf6;">
                                            <td colspan="4" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                                ► <t t-esc="day['sale_date']"/> - PRODUCTS SOLD
                                            </td>
                                        </tr>
                                        <tr style="background-color: #f5f5f5;">
                                            <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Product</th>
                                            <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Quantity</th>
                                            <th t-if="show_usd" style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Revenue (USD)</th>
                                            <th t-if="show_shilling" style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Revenue (Shillings)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="[p for p in products_breakdown if p['sale_date'] == day['sale_date']]" t-as="product">
                                            <td style="padding: 8px 10px; color: #424242; border-bottom: 1px solid #eeeeee;"><t t-esc="product['product_name']"/></td>
                                            <td style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee;"><t t-esc="'{:,.2f}'.format(product['qty_sold'])"/></td>
                                            <td t-if="show_usd" style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee;">
                                                $<t t-esc="'{:,.2f}'.format(product['revenue_usd'] or 0)"/>
                                            </td>
                                            <td t-if="show_shilling" style="padding: 8px 10px; text-align: right; color: #424242; border-bottom: 1px solid #eeeeee;">
                                                <t t-esc="'{:,.2f}'.format(product['revenue_shillings'] or 0)"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <!-- Salesperson Performance (if applicable) -->
                                <t t-if="not salesperson_id">
                                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; font-size: 11px;">
                                        <thead>
                                            <tr style="background-color: #fff3e0;">
                                                <td colspan="4" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #ef6c00; border-bottom: 2px solid #ffcc80;">
                                                    ► <t t-esc="day['sale_date']"/> - SALESPERSON PERFORMANCE
                                                </td>
                                            </tr>
                                            <tr style="background-color: #f5f5f5;">
                                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Salesperson</th>
                                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Orders</th>
                                                <th t-if="show_usd" style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Revenue (USD)</th>
                                                <th t-if="show_shilling" style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Revenue (Shillings)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="[sp for sp in salesperson_performance if sp['sale_date'] == day['sale_date']]" t-as="sp">
                                                <td style="padding: 8px 10px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="sp['salesperson']"/></td>
                                                <td style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee;"><t t-esc="sp['orders']"/></td>
                                                <td t-if="show_usd" style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee;">
                                                    $<t t-esc="'{:,.2f}'.format(sp['revenue_usd'] or 0)"/>
                                                </td>
                                                <td t-if="show_shilling" style="padding: 8px 10px; text-align: right; color: #424242; border-bottom: 1px solid #eeeeee;">
                                                    <t t-esc="'{:,.2f}'.format(sp['revenue_shillings'] or 0)"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                            </div>
                        </t>
                    </t>

                    <!-- Grand Totals -->
                    <table style="width: 100%; border-collapse: collapse; margin-top: 25px; font-size: 11px;">
                        <tbody>
                            <tr style="background-color: #1a237e;">
                                <td style="padding: 15px 10px; font-weight: bold; font-size: 13px; color: white; width: 50%;">
                                    TOTAL ORDERS
                                </td>
                                <td style="padding: 15px 10px; text-align: right; font-weight: bold; font-size: 14px; color: white;">
                                    <t t-esc="sum(d['order_count'] for d in daily_summary)"/>
                                </td>
                            </tr>
                            <tr t-if="show_usd" style="background-color: #3949ab;">
                                <td style="padding: 12px 10px; font-weight: bold; color: white;">
                                    TOTAL REVENUE (USD)
                                </td>
                                <td style="padding: 12px 10px; text-align: right; font-weight: bold; font-size: 14px; color: white;">
                                    $<t t-esc="'{:,.2f}'.format(sum(d['revenue_usd'] or 0 for d in daily_summary))"/>
                                </td>
                            </tr>
                            <tr t-if="show_shilling" style="background-color: #5c6bc0;">
                                <td style="padding: 12px 10px; font-weight: bold; color: white;">
                                    TOTAL REVENUE (Shillings)
                                </td>
                                <td style="padding: 12px 10px; text-align: right; font-weight: bold; font-size: 14px; color: white;">
                                    <t t-esc="'{:,.2f}'.format(sum(d['revenue_shillings'] or 0 for d in daily_summary))"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Footer Note -->
                    <div style="text-align: right; font-size: 10px; color: #757575; margin-top: 15px; font-style: italic;">
                        All amounts are expressed in United States Dollars (USD)
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_daily_sales" model="ir.actions.report">
        <field name="name">Daily Sales Report</field>
        <field name="model">idil.daily.sales.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">idil.report_daily_sales_template</field>
        <field name="report_file">idil.report_daily_sales_template</field>
        <field name="print_report_name">'Daily_Sales_Report_%s_%s' % (object.start_date, object.end_date)</field>
        <field name="binding_model_id" ref="model_idil_daily_sales_report_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
