<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================================================== -->
    <!-- ðŸ§¾ Customer Sale Order | Tree                          -->
    <!-- ===================================================== -->
    <record id="view_customer_sale_order_tree" model="ir.ui.view">
        <field name="name">idil.customer.sale.order.tree</field>
        <field name="model">idil.customer.sale.order</field>
        <field name="arch" type="xml">
            <tree string="ðŸ§¾ Customer Sale Orders" default_order="id desc">
                <field name="name" string="ðŸ”– Ref"/>
                <field name="order_date" string="ðŸ“… Date"/>
                <field name="customer_id" string="ðŸ‘¤ Customer"/>

                <field name="currency_id" string="ðŸ’± Cur"/>
                <field name="rate" string="ðŸ“ˆ Rate"/>

                <field name="order_total" string="ðŸ’° Total" sum="Total"/>
                <field name="total_paid" string="âœ… Paid" sum="Paid"/>
                <field name="balance_due" string="ðŸ§¾ Due" sum="Due"/>
                <field name="total_return_amount" string="â†©ï¸ Returned" sum="Returned"/>
                <field name="net_balance" string="âš–ï¸ Net" sum="Net"/>
                <field name="total_cost_price" string="ðŸ“¦ Cost" sum="Cost"/>

                <field name="state" string="ðŸ·ï¸ Status" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- ===================================================== -->
    <!-- ðŸ§¾ Customer Sale Order | Kanban                        -->
    <!-- ===================================================== -->
    <record id="view_customer_sale_order_kanban" model="ir.ui.view">
        <field name="name">idil.customer.sale.order.kanban</field>
        <field name="model">idil.customer.sale.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="order_date"/>
                <field name="customer_id"/>
                <field name="order_total"/>
                <field name="total_paid"/>
                <field name="balance_due"/>
                <field name="net_balance"/>
                <field name="currency_id"/>
                <field name="rate"/>
                <field name="state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click shadow-sm rounded-4 p-3">

                            <!-- Header -->
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-bold fs-6">
                                        <i class="fa fa-hashtag me-1 text-muted"/>
                                        <t t-esc="record.name.value"/>
                                    </div>
                                    <div class="text-muted small mt-1">
                                        <i class="fa fa-user me-1"/>
                                        <t t-esc="record.customer_id.value and record.customer_id.value[1]"/>
                                    </div>
                                </div>

                                <!-- Status Badge -->
                                <div>
                                    <span class="badge rounded-pill px-3 py-2"
                                        t-att-class="
                                            record.state.value == 'draft' and 'bg-warning text-dark' or
                                            record.state.value == 'confirmed' and 'bg-success' or
                                            record.state.value == 'cancel' and 'bg-danger' or
                                            'bg-secondary'
                                        ">
                                        <i class="fa fa-flag me-1"/>
                                        <t t-esc="record.state.value"/>
                                    </span>
                                </div>
                            </div>

                            <hr class="my-2"/>

                            <!-- Date + Currency -->
                            <div class="d-flex justify-content-between text-muted small">
                                <div>
                                    <i class="fa fa-calendar me-1"/>
                                    <t t-esc="record.order_date.value"/>
                                </div>
                                <div>
                                    <i class="fa fa-exchange me-1"/>
                                    <t t-esc="record.currency_id.value and record.currency_id.value[1]"/>
                                    <span class="ms-1">|</span>
                                    <span class="ms-1">Rate:</span>
                                    <t t-esc="record.rate.value"/>
                                </div>
                            </div>

                            <!-- Totals Boxes -->
                            <div class="row g-2 mt-2">
                                <div class="col-6">
                                    <div class="border rounded-4 p-2 bg-light">
                                        <div class="text-muted small">
                                            <i class="fa fa-money me-1"/> Total
                                        </div>
                                        <div class="fw-bold">
                                            <t t-esc="record.order_total.value"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="border rounded-4 p-2 bg-light">
                                        <div class="text-muted small">
                                            <i class="fa fa-check-circle me-1"/> Paid
                                        </div>
                                        <div class="fw-bold">
                                            <t t-esc="record.total_paid.value"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="border rounded-4 p-2 bg-light">
                                        <div class="text-muted small">
                                            <i class="fa fa-file-text-o me-1"/> Due
                                        </div>
                                        <div class="fw-bold">
                                            <t t-esc="record.balance_due.value"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="border rounded-4 p-2 bg-light">
                                        <div class="text-muted small">
                                            <i class="fa fa-balance-scale me-1"/> Net
                                        </div>
                                        <div class="fw-bold">
                                            <t t-esc="record.net_balance.value"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Footer -->
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge rounded-pill bg-light border text-muted px-3 py-2">
                                    <i class="fa fa-shopping-bag me-1"/>
                                    Sale Order
                                </span>

                                <div class="text-muted small">
                                    <i class="fa fa-arrow-right me-1"/>
                                    Open
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>




    <record id="view_customer_sale_order_search" model="ir.ui.view">
        <field name="name">idil.customer.sale.order.search</field>
        <field name="model">idil.customer.sale.order</field>
        <field name="arch" type="xml">
            <search string="Search Customer Sale Orders">

                <field name="name"/>
                <field name="customer_id"/>
                <field name="state"/>

                <separator/>

                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
    
            </search>
        </field>
    </record>



    <!-- ===================================================== -->
    <!-- ðŸ§¾ Customer Sale Order | Form                           -->
    <!-- ===================================================== -->
    <record id="view_customer_sale_order_form" model="ir.ui.view">
        <field name="name">idil.customer.sale.order.form</field>
        <field name="model">idil.customer.sale.order</field>
        <field name="arch" type="xml">
            <form string="ðŸ§¾ Customer Sale Order" class="o_form_full o_form_nosheet">

                <header>

                    <button name="action_confirm"
                                string="âœ… Confirm"
                                type="object"
                                class="btn-primary"
                                />
                            

                    <button name="action_reset_to_draft"
                            string="ðŸ”„ Reset To Draft"
                            type="object"
                            class="btn-info"
                        />

                     
                    <button name="action_cancel"
                        string="â›” Cancel"
                        type="object"
                        class="btn-danger"
                         />


                    <span class="ms-2 badge rounded-pill bg-light border text-muted px-3 py-2">
                        <i class="fa fa-flag me-1"/>
                        Status:
                        <field name="state" widget="badge" readonly="1" class="ms-1"/>
                    </span>
                </header>

                <sheet>

                    <!-- Title -->
                    <div class="oe_title">
                        <h1 class="mb-1">
                            <i class="fa fa-shopping-bag me-2 text-primary" role="img" aria-label="Sale"/>
                            Sale Order
                            <span class="ms-2 badge rounded-pill bg-light border text-muted px-3 py-2">
                                <i class="fa fa-hashtag me-1"/>
                                <field name="name" readonly="1" nolabel="1"/>
                            </span>
                        </h1>

                        <div class="text-muted">
                            <i class="fa fa-info-circle me-1"/>
                            Create a sale order manually, or optionally select a Customer Place Order to auto-fill the lines.
                        </div>
                    </div>

                    <!-- âœ… 3 cards (horizontal) -->
                    <div class="row g-3 mt-3">

                        <!-- Customer & Document -->
                        <div class="col-12 col-lg-5">
                            <div class="border rounded-4 p-3 shadow-sm bg-white h-100">
                                <div class="fw-bold mb-2 d-flex align-items-center gap-2 flex-wrap">
                                    <i class="fa fa-file-text-o text-muted"/>
                                    <span>Customer &amp; Document</span>
                                </div>

                                <div class="d-grid gap-2">

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-user"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Customer</span>
                                        <div class="flex-grow-1" style="min-width:260px;">
                                            <field name="customer_id" nolabel="1"/>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-list-alt"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Place Order (Optional)</span>
                                        <div class="flex-grow-1" style="min-width:260px;">
                                            <field name="customer_place_order_id" nolabel="1" required="0"/>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-calendar"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Order Date</span>
                                        <div class="flex-grow-1" style="min-width:260px;">
                                            <field name="order_date" nolabel="1"/>
                                        </div>
                                    </div>

                                </div>

                                <div class="alert alert-info mt-3 mb-0" role="alert">
                                    <i class="fa fa-lightbulb-o me-1"/>
                                    Tip: If you select <b>Place Order</b>, products and quantities are auto-copied into lines.
                                </div>

                            </div>
                        </div>

                        <!-- Finance -->
                        <div class="col-12 col-lg-4">
                            <div class="border rounded-4 p-3 shadow-sm bg-white h-100">
                                <div class="fw-bold mb-2 d-flex align-items-center gap-2 flex-wrap">
                                    <i class="fa fa-line-chart text-muted"/>
                                    <span>Finance</span>
                                </div>

                                <div class="d-grid gap-2">

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-building"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Company</span>
                                        <div class="flex-grow-1" style="min-width:220px;">
                                            <field name="company_id" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-money"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Currency</span>
                                        <div class="flex-grow-1" style="min-width:220px;">
                                            <field name="currency_id" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-exchange"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Exchange Rate</span>
                                        <div class="flex-grow-1" style="min-width:220px;">
                                            <field name="rate" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-check-circle"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Total Paid</span>
                                        <div class="flex-grow-1" style="min-width:220px;">
                                            <field name="total_paid" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-muted" style="width:24px; text-align:center;">
                                            <i class="fa fa-file-text-o"/>
                                        </span>
                                        <span class="o_form_label mb-0" style="min-width:160px;">Balance Due</span>
                                        <div class="flex-grow-1" style="min-width:220px;">
                                            <field name="balance_due" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                </div>

                                <div class="mt-3">
                                    <div class="badge rounded-pill bg-light border text-muted px-3 py-2">
                                        <i class="fa fa-shield me-1"/>
                                        Totals are computed from order lines + payments + returns.
                                    </div>
                                </div>

                            </div>
                        </div>

                        <!-- Totals (small card) -->
                        <div class="col-12 col-lg-3">
                            <div class="border rounded-4 p-3 shadow-sm bg-white h-100">
                                <div class="fw-bold mb-2 d-flex align-items-center gap-2">
                                    <i class="fa fa-calculator text-muted"/>
                                    <span>Totals</span>
                                </div>

                                <div class="d-grid gap-2">

                                    <div class="border rounded-4 p-2 bg-white">
                                        <div class="text-muted small"><i class="fa fa-money me-1"/> Order Total</div>
                                        <div class="fw-bold">
                                            <field name="order_total" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                    <div class="border rounded-4 p-2 bg-white">
                                        <div class="text-muted small"><i class="fa fa-check-circle me-1"/> Total Paid</div>
                                        <div class="fw-bold">
                                            <field name="total_paid" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                    <div class="border rounded-4 p-2 bg-white">
                                        <div class="text-muted small"><i class="fa fa-file-text-o me-1"/> Balance Due</div>
                                        <div class="fw-bold">
                                            <field name="balance_due" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                    <div class="border rounded-4 p-2 bg-white">
                                        <div class="text-muted small"><i class="fa fa-balance-scale me-1"/> Net Balance</div>
                                        <div class="fw-bold">
                                            <field name="net_balance" nolabel="1" readonly="1"/>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>

                    

                    <!-- âœ… SINGLE NOTEBOOK -->
                    <notebook class="mt-3">

                        <!-- Order Lines -->
                        <page string="ðŸ“‹ Order Lines" name="page_lines">
                            <div class="border rounded-4 p-3 shadow-sm bg-white">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
                                    <div class="fw-bold d-flex align-items-center gap-2">
                                        <i class="fa fa-list-ul text-muted"/>
                                        <span>Products</span>
                                    </div>
                                    <span class="badge rounded-pill bg-light border text-muted px-3 py-2">
                                        <i class="fa fa-info-circle me-1"/>
                                        Add products first, then go to Payments tab.
                                    </span>
                                </div>

                                <field name="order_lines" nolabel="1">
                                    <tree string="Products" editable="bottom" delete="false">
                                        <field name="product_id" string="ðŸ“¦ Product" required="1"/>
                                        <field name="available_stock" string="ðŸ“Š Available" readonly="1"/>
                                        <field name="quantity" string="ðŸ§® Qty"/>
                                        <field name="price_unit" string="ðŸ’µ Unit Price"/>
                                        <field name="subtotal" string="ðŸ’° Subtotal" sum="Total" readonly="1"/>
                                    </tree>
                                </field>

                                <div class="text-muted mt-2">
                                    <i class="fa fa-info-circle me-1"/>
                                    Stock is shown for reference. Quantity updates will follow your stock rules in Python.
                                </div>
                            </div>
                        </page>

                        <page string="ðŸ’¬ Audit" name="Audit">
                            <group string="Audit">
                                
                                <group string="Confirmed">
                                    <field name="confirmed_by" readonly="1"/>
                                    <field name="confirmed_date" readonly="1"/>
                                </group>
                                
                                <group string="Reset">
                                    <field name="reset_to_draft_by" readonly="1"/>
                                    <field name="reset_to_draft_date" readonly="1"/>
                                </group>
                                   
                                <group string="Cancelled">
                                    <field name="cancelled_by" readonly="1"/>
                                    <field name="cancelled_date" readonly="1"/>
                                </group>
                                

                                
                               
                                
                            </group>
                        </page>
                    </notebook>
                    <!-- âœ… Payments Card (NOW above notebook) -->
                    <div class="row g-3 mt-3">
                        <div class="col-12">
                            <div class="border rounded-4 p-3 shadow-sm bg-white">

                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
                                    <div class="fw-bold d-flex align-items-center gap-2">
                                        <i class="fa fa-credit-card text-muted"/>
                                        <span>Payments</span>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <span class="badge rounded-pill bg-light border text-muted px-3 py-2">
                                            <i class="fa fa-money me-1"/> Total:
                                            <field name="order_total" nolabel="1" readonly="1" class="ms-1"/>
                                        </span>
                                        <span class="badge rounded-pill bg-light border text-muted px-3 py-2">
                                            <i class="fa fa-check-circle me-1"/> Paid:
                                            <field name="total_paid" nolabel="1" readonly="1" class="ms-1"/>
                                        </span>
                                        <span class="badge rounded-pill bg-light border text-muted px-3 py-2">
                                            <i class="fa fa-file-text-o me-1"/> Due:
                                            <field name="balance_due" nolabel="1" readonly="1" class="ms-1"/>
                                        </span>
                                    </div>
                                </div>

                                <div class="alert alert-warning mb-3" role="alert">
                                    <i class="fa fa-exclamation-triangle me-1"/>
                                    Please complete product selection first. Then add one or more payment lines below.
                                </div>

                                <field name="payment_lines" nolabel="1"
                                       context="{'default_customer_id': customer_id, 'default_date': order_date}">
                                    <tree string="Payments" editable="bottom">
                                        <field name="company_id" nolabel="1" readonly="1"/>
                                        <field name="payment_method_ids" string="ðŸ’³ Method" required="1"/>
                                        <field name="account_id" string="ðŸ¦ Account" readonly="1"/>
                                        <field name="date" string="ðŸ“… Date" required="1"/>
                                        <field name="amount" string="ðŸ’° Amount" required="1"/>
                                    </tree>
                                </field>

                                <div class="text-muted mt-2">
                                    <i class="fa fa-info-circle me-1"/>
                                    Account is auto-filled from the selected payment method and cannot be changed.
                                </div>

                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================================================== -->
    <!-- ðŸš€ Action                                              -->
    <!-- ===================================================== -->
    <record id="action_customer_idsale_order" model="ir.actions.act_window">
        <field name="name">ðŸ§¾ Customer Sale Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">idil.customer.sale.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Customer Sale Order
            </p>
            <p>
                Select a <b>Customer</b> and add products manually, or optionally select a <b>Place Order</b> to auto-fill lines.
            </p>
        </field>
        
        <field name="domain">[('state','!=','cancel')]</field>
 

        <field name="search_view_id" ref="view_customer_sale_order_search"/>

    </record>

</odoo>
