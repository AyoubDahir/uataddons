<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_daily_cash_collection_wizard_form" model="ir.ui.view">
        <field name="name">idil.daily.cash.collection.wizard.form</field>
        <field name="model">idil.daily.cash.collection.wizard</field>
        <field name="arch" type="xml">
            <form string="Daily Cash Collection Report">
                <group>
                    <group>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="salesperson_id" options="{'no_create': True}"/>
                        <field name="payment_method_id" options="{'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Print Report" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_daily_cash_collection_wizard" model="ir.actions.act_window">
        <field name="name">Daily Cash Collection Report</field>
        <field name="res_model">idil.daily.cash.collection.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Report Action -->
    <record id="action_report_daily_cash_collection" model="ir.actions.report">
        <field name="name">Daily Cash Collection Report</field>
        <field name="model">idil.daily.cash.collection.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">idil.report_daily_cash_collection_template</field>
        <field name="report_file">idil.report_daily_cash_collection_template</field>
        <field name="binding_model_id" ref="model_idil_daily_cash_collection_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template -->
    <template id="report_daily_cash_collection_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-family: 'Segoe UI', Arial, sans-serif;">
                    <!-- Report Header -->
                    <div style="background-color: #1a237e; color: white; padding: 20px; margin-bottom: 25px; border-bottom: 4px solid #3949ab;">
                        <h1 style="font-size: 24px; font-weight: bold; margin: 0 0 8px 0; color: white;">Daily Cash Collection Report</h1>
                        <div style="font-size: 12px; color: #c5cae9;">
                            Date: <strong style="color: white;"><t t-esc="data['date']"/></strong>
                        </div>
                    </div>

                    <!-- Filter Summary -->
                    <div style="background-color: #f5f5f5; padding: 12px 15px; margin-bottom: 20px; border-radius: 4px; font-size: 11px;">
                        <strong>Filters:</strong>
                        Salesperson: <span style="color: #1a237e;"><t t-esc="data['salesperson_name']"/></span> |
                        Payment Method: <span style="color: #1a237e;"><t t-esc="data['payment_method_name']"/></span>
                    </div>

                    <!-- Summary Table -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: left; font-weight: bold; color: #333; width: 50%;">Summary</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: right; font-weight: bold; color: #333; width: 50%;">Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background-color: #e8eaf6;">
                                <td colspan="2" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    ► COLLECTION SUMMARY
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;">Total Sales</td>
                                <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                    <t t-esc="'{:,.2f}'.format(data['total_sales'])"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;">Total Collected</td>
                                <td style="padding: 8px 10px; text-align: right; color: #1565c0; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                    <t t-esc="'{:,.2f}'.format(data['total_collected'])"/>
                                </td>
                            </tr>
                            <tr style="background-color: #1a237e;">
                                <td style="padding: 15px 10px; font-weight: bold; font-size: 13px; color: white;">
                                    COLLECTION RATE
                                </td>
                                <td style="padding: 15px 10px; text-align: right; font-weight: bold; font-size: 14px; color: white;">
                                    <t t-esc="'{:.1f}'.format(data['collection_rate'])"/>%
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- By Salesperson -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #e8eaf6;">
                                <td colspan="4" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    ► COLLECTION BY SALESPERSON
                                </td>
                            </tr>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Salesperson</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Receipts</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Total Sales</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Collected</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data['salesperson_summary']" t-as="sp">
                                <tr>
                                    <td style="padding: 8px 10px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="sp['name']"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee;"><t t-esc="sp['receipt_count']"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee;"><t t-esc="'{:,.2f}'.format(sp['total_sales'])"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #1565c0; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="'{:,.2f}'.format(sp['total_collected'])"/></td>
                                </tr>
                            </t>
                            <t t-if="not data['salesperson_summary']">
                                <tr>
                                    <td colspan="4" style="padding: 20px 10px; text-align: center; color: #9e9e9e; font-style: italic; border-bottom: 1px solid #eeeeee;">
                                        No collections for this date.
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- By Payment Method -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #e8eaf6;">
                                <td colspan="3" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    ► COLLECTION BY PAYMENT METHOD
                                </td>
                            </tr>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Payment Method</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Transactions</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data['payment_method_summary']" t-as="pm">
                                <tr>
                                    <td style="padding: 8px 10px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="pm['name']"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee;"><t t-esc="pm['count']"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="'{:,.2f}'.format(pm['amount'])"/></td>
                                </tr>
                            </t>
                            <t t-if="not data['payment_method_summary']">
                                <tr>
                                    <td colspan="3" style="padding: 20px 10px; text-align: center; color: #9e9e9e; font-style: italic; border-bottom: 1px solid #eeeeee;">
                                        No payments recorded.
                                    </td>
                                </tr>
                            </t>
                            <tr style="background-color: #1a237e;">
                                <td style="padding: 15px 10px; font-weight: bold; font-size: 13px; color: white;">
                                    TOTAL
                                </td>
                                <td style="padding: 15px 10px;"></td>
                                <td style="padding: 15px 10px; text-align: right; font-weight: bold; font-size: 14px; color: white;">
                                    <t t-esc="'{:,.2f}'.format(data['total_by_method'])"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
