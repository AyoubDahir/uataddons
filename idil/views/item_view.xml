<odoo>

    <!-- ========================= -->
    <!-- TREE -->
    <!-- ========================= -->
    <record id="view_idil_item_tree" model="ir.ui.view">
        <field name="name">idil.item.tree</field>
        <field name="model">idil.item</field>
        <field name="arch" type="xml">
            <tree string="üì¶ Items" decoration-info="quantity &lt;= min">
                <field name="image" widget="image" options="{'size': (22, 22)}"/>

                <field name="name" string="üì¶ Item"/>
                <field name="item_type" string="üè∑Ô∏è Type" optional="show"/>
                <field name="item_category_id" string="üóÇÔ∏è Category" optional="show"/>
                <field name="unitmeasure_id" string="üìè UOM" optional="show"/>

                <field name="quantity" string="üì¶ QTY"/>
                <field name="min" string="üîî Re-Order" optional="show"/>

                <field name="currency_id" string="üí± Cur" optional="hide"/>
                <field name="cost_price" string="üíµ Cost"/>

                <field name="total_price"
                       string="üßæ Total"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       sum="Total"/>

                <field name="purchase_date" string="üìÖ Purchase" optional="show"/>
                <field name="expiration_date" string="‚è≥ Expiry" optional="hide"/>
                <field name="days_until_expiration" string="‚è≥ Days" optional="hide"/>

                <field name="bar_code" string="üè∑Ô∏è Barcode" optional="hide"/>
                <field name="active" string="‚úÖ Active" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- ========================= -->
    <!-- KANBAN -->
    <!-- ========================= -->
    <record id="view_idil_item_kanban" model="ir.ui.view">
        <field name="name">idil.item.kanban</field>
        <field name="model">idil.item</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="item_category_id"/>
                <field name="unitmeasure_id"/>
                <field name="quantity"/>
                <field name="min"/>
                <field name="cost_price"/>
                <field name="currency_id"/>
                <field name="image"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-if="record.image.raw_value"
                                     t-att-src="kanban_image('idil.item', 'image', record.id.raw_value)"
                                     class="oe_kanban_avatar"/>
                            </div>

                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <t t-esc="record.name.value"/>
                                </strong>

                                <div class="text-muted">
                                    üóÇÔ∏è <t t-esc="record.item_category_id.value"/>
                                    <span class="mx-1">‚Ä¢</span>
                                    üìè <t t-esc="record.unitmeasure_id.value"/>
                                </div>

                                <div class="mt-1">
                                    üì¶ <b>QTY:</b> <t t-esc="record.quantity.value"/>
                                    <span class="mx-2">|</span>
                                    üîî <b>Min:</b> <t t-esc="record.min.value"/>
                                </div>

                                <div class="mt-1">
                                    üíµ <b>Cost:</b>
                                    <t t-esc="record.cost_price.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========================= -->
    <!-- SEARCH -->
    <!-- ========================= -->
    <record id="view_idil_item_search" model="ir.ui.view">
        <field name="name">idil.item.search</field>
        <field name="model">idil.item</field>
        <field name="arch" type="xml">
            <search string="üîé Search Items">
                <field name="name" string="üì¶ Item"/>
                <field name="item_type" string="üè∑Ô∏è Type"/>
                <field name="item_category_id" string="üóÇÔ∏è Category"/>
                <field name="unitmeasure_id" string="üìè UOM"/>
                <field name="bar_code" string="üè∑Ô∏è Barcode"/>

                <separator/>

                
 
            </search>
        </field>
    </record>

    <!-- ========================= -->
    <!-- ITEM FORM -->
    <!-- ========================= -->
    <record id="view_idil_item_form" model="ir.ui.view">
        <field name="name">idil.item.form</field>
        <field name="model">idil.item</field>
        <field name="arch" type="xml">
            <form string="üì¶ Item">
                <sheet>

                    <!-- Header -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Cheese Burger"/>
                        </h1>
                        <div class="text-muted">
                        <group>
                            üóÇÔ∏è <field name="item_category_id" class="oe_inline"/>
                        </group>

                         <group>
                        üìè <field name="unitmeasure_id" class="oe_inline"/>
                        </group>

                         <group>
                            üè∑Ô∏è <field name="item_type" class="oe_inline"/>
                        </group>

                            
                            
                            
                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="image" widget="image" options="{'size': (160, 160)}"/>
                            <field name="active" string="‚úÖ Active"/>
                        </group>

                        <group>
                            <field name="quantity" string="üì¶ Current Stock" readonly="1"/>
                            <field name="min" string="üîî Re-Order Level"/>
                            <field name="cost_price" string="üíµ Cost per Unit"/>
                            <field name="total_price"
                                   string="üßæ Total Value"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"/>
                            <field name="currency_id" string="üí± Currency" options="{'no_create': True}"/>
                            <field name="is_tfg" string="üè∑Ô∏è TFG"/>
                            <field name="is_commission" string="üéØ Commission"/>
                        </group>
                    </group>

                    <notebook>

                        <!-- Details -->
                        <page string="üßæ Details">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="allergens" string="‚ö†Ô∏è Allergens"/>
                                </group>
                                <group>
                                    <field name="purchase_date" string="üìÖ Purchase Date"/>
                                    <field name="expiration_date" string="‚è≥ Expiration Date"/>
                                    <field name="days_until_expiration" string="‚è≥ Days Left" readonly="1"/>
                                </group>
                            </group>

                            <group>
                                <group>
                                    <field name="order_information" string="üìù Order Info"/>
                                </group>
                                <group>
                                    <field name="bar_code" string="üè∑Ô∏è Barcode"/>
                                </group>
                            </group>
                        </page>

                        <!-- Accounts -->
                        <page string="üè¶ Accounts">
                            <group>
                                <group>
                                    <field name="purchase_account_id" string="üìå Purchase (COGS)" options="{'no_create': True}"/>
                                    <field name="sales_account_id" string="üìå Sales (Revenue)" options="{'no_create': True}"/>
                                </group>
                                <group>
                                    <field name="asset_account_id" string="üìå Inventory (Asset)" options="{'no_create': True}"/>
                                    <field name="adjustment_account_id" string="üìå Adjustment" options="{'no_create': True}"/>
                                    <button name="get_available_accounts"
                                            string="üß™ Check Available Accounts"
                                            type="object"
                                            class="oe_highlight"/>
                                </group>
                            </group>
                        </page>

                        <!-- History / Movements -->
                        <page string="üìú Item History">
                            <field name="movement_ids" context="{'default_item_id': active_id}">
                                <tree string="üìú Movements"
                                      create="false" delete="false" edit="false"
                                      default_order="date desc,id desc">
                                    <field name="date" string="üìÖ Date"/>
                                    <field name="transaction_number" string="üî¢ Trx#"/>
                                    <field name="movement_type" string="üîÅ Type"/>
                                    <field name="quantity" string="üì¶ Qty" sum="Total"/>
                                    <field name="vendor_id" string="üè∑Ô∏è Vendor"/>
                                    <!-- <field name="product_id" string="üè≠ Product"/> -->

                                    <field name="source" string="üì§ Source" optional="show"/>

                                    <!-- show structured transfer fields if you added them -->
                                    <field name="source_warehouse_id" string="üè¨ From Warehouse_" optional="show"/>
                                    <field name="source_location_id" string="üì§ From Location" optional="hide"/>

                                    <field name="destination_warehouse_id" string="üè¨ To Warehouse_" optional="Show"/>
                                    <field name="destination_location_id" string="üì• To Location" optional="hide"/>

                                    <!-- fallback text -->
                                    
                                    <field name="destination" string="üì• Destination" optional="show"/>

                                    <!-- ‚úÖ click to open original document -->
                                    <field name="related_document" string="üßæ Source Document" widget="reference"/>
                                </tree>
                            </field>

                            <div class="text-muted mt16">
                                ‚ÑπÔ∏è Tip: Click <b>Source Document</b> to open the original Purchase Order Line / Return / Opening Balance / etc.
                            </div>
                        </page>

                    </notebook>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- ACTION -->
    <!-- ========================= -->
    <record id="action_idil_item" model="ir.actions.act_window">
        <field name="name">üì¶ Items</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">idil.item</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_idil_item_search"/>
    </record>

</odoo>
