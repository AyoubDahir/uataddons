<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_tree" model="ir.ui.view">
        <field name="name">idil.sale.order.tree</field>
        <field name="model">idil.sale.order</field>
        <field name="arch" type="xml">
            <tree string="ðŸ§¾ Sales Orders">
                <field name="name"/>
                <field name="order_date"/>
                <field name="sales_person_id"/>
                <field name="currency_id"/>
                <field name="order_total"/>
                <field name="total_due_usd"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="view_sale_order_kanban" model="ir.ui.view">
            <field name="name">idil.sale.order.kanban</field>
            <field name="model">idil.sale.order</field>
            <field name="arch" type="xml">
                <kanban string="ðŸ§¾ Sales Orders" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="sales_person_id"/>
                    <field name="order_date"/>
                    <field name="order_total"/>
                    <field name="total_due_usd"/>
                    <field name="state"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card shadow-sm rounded-3 p-3">

                                <div class="d-flex justify-content-between align-items-center">
                                    <strong class="text-primary">
                                        <t t-esc="record.name.value"/>
                                    </strong>

                                    <span class="badge bg-secondary">
                                        <t t-esc="record.state.value"/>
                                    </span>
                                </div>

                                <div class="mt-2 text-muted">
                                    <i class="fa fa-user me-1"/>
                                    <t t-esc="record.sales_person_id.value"/>
                                </div>

                                <div class="mt-1 text-muted">
                                    <i class="fa fa-calendar me-1"/>
                                    <t t-esc="record.order_date.value"/>
                                </div>

                                <div class="mt-3">
                                    <div>
                                        <strong>ðŸ’° FY:</strong>
                                        <t t-esc="record.order_total.value"/>
                                    </div>
                                    <div class="mt-1">
                                        <strong>ðŸ’µ USD:</strong>
                                        <t t-esc="record.total_due_usd.value"/>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        


    <record id="view_sale_order_form" model="ir.ui.view">
    <field name="name">sale.order.form</field>
    <field name="model">idil.sale.order</field>
    <field name="arch" type="xml">
        <form string="ðŸ§¾ Sales Order" class="o_form_full o_form_nosheet">

            <header>
                <button name="button_confirm"
                        string="âœ… Confirm"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'draft'"/>

                <button name="action_print_sale_invoice_pdf"
                        type="object"
                        string="ðŸ–¨ï¸ Print Invoice"
                        class="btn-secondary"
                        invisible="state != 'confirmed'"/>

                <button name="action_print_sale_invoice_two_copy_pdf"
                        type="object"
                        string="ðŸ–¨ï¸ Print Invoice (Two Copy)"
                        class="btn-secondary"
                        invisible="state != 'confirmed'"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancel"/>
            </header>

            <sheet>

                <!-- Title -->
                <div class="oe_title">
                    <h1 class="mb-1">
                        Sales Order
                        <span class="ms-2 badge rounded-pill bg-light border text-muted px-3 py-2">
                            <i class="fa fa-hashtag me-1"/>
                            <field name="name" readonly="1" nolabel="1"/>
                        </span>
                    </h1>

                    <div class="text-muted mt-1">
                        <i class="fa fa-info-circle me-1"/>
                        Draft orders are editable. Once confirmed, the order becomes financially locked.
                    </div>
                </div>

                <!-- Cards -->
                <div class="row g-3 mt-3">

                    <!-- LEFT CARD -->
                    <div class="col-12 col-lg-7">
                        <div class="border rounded-4 p-4 shadow-sm bg-white h-100">
                            <div class="fw-bold mb-3 d-flex align-items-center gap-2">
                                <i class="fa fa-user text-muted"/>
                                <span>Salesperson &amp; Order Information</span>
                            </div>

                            <group col="1">
                                <field name="sales_person_id" options="{'no_create': True}"/>
                                <field name="salesperson_ar_account_id" readonly="1"/>
                                <field name="salesperson_ar_currency_id" readonly="1"/>
                                <field name="salesperson_due_amount" readonly="1"/>
                            </group>

                            <div class="alert alert-info mt-3 mb-0">
                                <i class="fa fa-lightbulb-o me-1"/>
                                Tip: Selecting a salesperson auto-loads their latest draft order lines.
                            </div>
                        </div>
                    </div>

                    <!-- RIGHT CARD -->
                    <div class="col-12 col-lg-5">
                        <div class="border rounded-4 p-4 shadow-sm bg-white h-100">
                            <div class="fw-bold mb-3 d-flex align-items-center gap-2">
                                <i class="fa fa-line-chart text-muted"/>
                                <span>Financial Summary</span>
                            </div>

                            <group col="1">
                                <field name="order_date"/>
                                <field name="currency_id" groups="base.group_multi_currency" readonly="1"/>
                                <field name="USD_currency_id" groups="base.group_multi_currency" readonly="1"/>

                                <field name="rate" groups="base.group_multi_currency" readonly="1"/>
                                <field name="state" readonly="1"/>
                                <field name="commission_amount"
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"
                                       readonly="1"/>
                            </group>

                            <div class="alert alert-secondary mt-3 mb-0">
                                <i class="fa fa-shield me-1"/>
                                Financial values are system-calculated and audit-safe.
                            </div>
                        </div>
                    </div>

                </div>

                <!-- âœ… Journal Summary (DISPLAY ONLY, NO NEW MODEL) -->
                <div class="row g-3 mt-3" invisible="state != 'confirmed'">
                    <div class="col-12">
                        <field name="journal_summary_html" nolabel="1" readonly="1"/>
                    </div>
                </div>

                <!-- Notebook -->
                <notebook class="mt-4">

                    <!-- Order Lines -->
                    <page string="ðŸ“‹ Order Lines">
                        <div class="border rounded-4 p-4 shadow-sm bg-white">

                            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                                <div class="fw-bold d-flex align-items-center gap-2">
                                    <i class="fa fa-list-ul text-muted"/>
                                    <span>Products &amp; Quantities</span>
                                </div>

                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge rounded-pill bg-light border px-3 py-2">
                                        ðŸ’µ USD:
                                        <field name="total_due_usd"
                                               widget="monetary"
                                               options="{'currency_field': 'USD_currency_id'}"
                                               nolabel="1" readonly="1"
                                               class="ms-1"/>
                                    </span>
                                    <span class="badge rounded-pill bg-light border px-3 py-2">
                                        ðŸ’° FY:
                                        <field name="order_total"
                                               widget="monetary"
                                               options="{'currency_field': 'currency_id'}"
                                               nolabel="1" readonly="1"
                                               class="ms-1"/>
                                    </span>
                                </div>
                            </div>

                            <field name="order_lines" widget="section_and_note_one2many" mode="tree">
                                <tree editable="bottom" delete="false">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="currency_id"/>
                                    <field name="quantity_Demand" readonly="1" force_save="1"/>
                                    <field name="quantity"/>
                                    <field name="quantity_diff" readonly="1" optional="hide"/>
                                    <field name="discount_quantity" readonly="1" optional="hide"/>
                                    <field name="returned_quantity" readonly="1" optional="hide"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="price_unit"/>
                                    <field name="discount_amount" readonly="1" optional="hide"/>
                                    <field name="commission" optional="show"/>
                                    <field name="commission_amount" readonly="1" optional="show"/>
                                    <field name="subtotal"
                                           widget="monetary"
                                           options="{'currency_field': 'currency_id'}"
                                           readonly="1"/>
                                    <field name="fy_currency_id"/>
                                    <field name="subtotal_fy"
                                           widget="monetary"
                                           options="{'currency_field': 'fy_currency_id'}"/>
                                    <field name="base_currency_id"/>
                                    <field name="subtotal_usd"
                                           widget="monetary"
                                           options="{'currency_field': 'base_currency_id'}"/>
                                </tree>
                            </field>

                            <group name="note_group" col="6" class="mt-3">
                                <group colspan="4"/>
                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <field name="total_due_usd"
                                           widget="monetary"
                                           options="{'currency_field': 'USD_currency_id'}"
                                           string="Total USD"/>
                                    <field name="order_total"
                                           widget="monetary"
                                           options="{'currency_field': 'currency_id'}"
                                           class="oe_subtotal_footer_separator"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>

                        </div>
                    </page>

                    <!-- Reporting -->
                    <page string="ðŸ“Š Reporting">
                        <div class="border rounded-4 p-4 shadow-sm bg-white">
                            <div class="fw-bold mb-3 d-flex align-items-center gap-2">
                                <i class="fa fa-bar-chart text-muted"/>
                                <span>USD Analysis</span>
                            </div>

                            <group>
                                <group>
                                    <field name="total_commission_usd"/>
                                    <field name="total_discount_usd"/>
                                </group>
                            </group>
                        </div>
                    </page>

                </notebook>

            </sheet>
        </form>
    </field>
</record>

    <!-- ===================================================== -->
    <!-- ðŸš€ Action                                              -->
    <!-- ===================================================== -->
    <record id="action_sale_order" model="ir.actions.act_window">
        <field name="name">Sale Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">idil.sale.order</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
