<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Order Tree View -->
    <record id="view_sale_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">idil.sale.order</field>
        <field name="arch" type="xml">
            <tree>
                
                <field name="company_id"/>
                <field name="name"/>
                <field name="sales_person_id"/>
                <field name="order_date"/>
                <field name="total_returned_qty" sum="total" readonly="1"/>

                <field name="total_due_usd" sum="total"/>
                <field name="total_commission_usd" sum="total"/>
                <field name="total_discount_usd" sum="total"/>
                <field name="order_total" sum="total"/>
                <field name="total_cost_price" sum="total"/>
                
                <field name="currency_id"/>
                <field name="rate"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_kanban_idil_sale_order" model="ir.ui.view">
        <field name="name">idil.sale.order.kanban</field>
        <field name="model">idil.sale.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="sales_person_id"/>
                <field name="order_total"/>
                <field name="commission_amount"/>
                <field name="currency_id"/>
                <field name="state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_header">
                                <strong><field name="name"/></strong>
                                <span class="badge badge-primary float-right">
                                    <field name="state"/>
                                </span>
                            </div>

                            <div class="o_kanban_details">
                                <div>
                                    <strong>Salesperson:</strong>
                                    <field name="sales_person_id"/>
                                </div>
                                <div>
                                    <strong>Total Order:</strong>
                                    <field name="order_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </div>
                                <div>
                                    <strong>Commission:</strong>
                                    <field name="commission_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </div>
                            </div>

                          
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sale Order Form View -->
    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">idil.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                <button name="button_confirm"
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                         />

                

                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancel"/>
            </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sales_person_id" options="{'no_create': True}"/>
                            <field name="order_date"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                        <group>
                            <field name="rate" groups="base.group_multi_currency"/>
                            <field name="state" readonly="1"/>
                            <field name="commission_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_lines" widget="section_and_note_one2many" mode="tree">
                                <tree editable="bottom" delete="false">
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="quantity_Demand" optional="show" readonly="1" force_save="1"/>
                                    <field name="quantity"/>
                                    <field name="quantity_diff" optional="hide" readonly="1"/>
                                    <field name="discount_quantity" optional="hide" readonly="1"/>
                                    <field name="returned_quantity" optional="hide" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="price_unit"/>
                                    <field name="discount_amount" sum="Total" optional="hide" readonly="1"/>
                                    <field name="commission" optional="hide"/>
                                    <field name="commission_amount" sum="Total" optional="hide" readonly="1"/>
                                    <field name="subtotal" sum="Total" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </tree>
                            </field>
                            
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <!-- Placeholders for notes if needed -->
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="total_due_usd" widget="monetary" options="{'currency_field': 'currency_id'}" string="Total USD"/>
                                    <field name="order_total" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                        <page string="Reporting">
                             <group>
                                <group string="USD Totals">
                                    <field name="total_commission_usd"/>
                                    <field name="total_discount_usd"/>
                                </group>
                             </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sale Order Action -->
    <record id="action_sale_order" model="ir.actions.act_window">
        <field name="name">Sale Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">idil.sale.order</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


</odoo>
