<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_manual_reconciliation_wizard_form" model="ir.ui.view">
        <field name="name">idil.bank.reconciliation.manual.wizard.form</field>
        <field name="model">idil.bank.reconciliation.manual.wizard</field>
        <field name="arch" type="xml">
            <form string="Manual Reconciliation Match">
                <group>
                    <field name="statement_line_id"/>
                    <field name="account_id" invisible="1"/>
                    <field name="booking_line_id" options="{'no_create': True}"/>
                    <field name="amount_to_match"/>
                </group>
                <footer>
                    <button name="action_match" string="Match" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bank_manual_reconciliation_wizard" model="ir.actions.act_window">
        <field name="name">Manual Match</field>
        <field name="res_model">idil.bank.reconciliation.manual.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
