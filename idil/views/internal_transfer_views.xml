<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================= -->
    <!-- Tree View -->
    <!-- ========================= -->
    <record id="view_internal_transfer_tree" model="ir.ui.view">
        <field name="name">idil.internal.transfer.tree</field>
        <field name="model">idil.internal.transfer</field>
        <field name="arch" type="xml">
            <tree string="Internal Transfers" default_order="id desc">
                <field name="name"/>
                <field name="transfer_date"/>
                <field name="source_warehouse_id"/>
                <field name="source_location_id"/>
                <field name="destination_warehouse_id"/>
                <field name="destination_location_id"/>
                <field name="move_ref"/>
            </tree>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Form View -->
    <!-- ========================= -->
    <record id="view_internal_transfer_form" model="ir.ui.view">
        <field name="name">idil.internal.transfer.form</field>
        <field name="model">idil.internal.transfer</field>
        <field name="arch" type="xml">
            <form string="Internal Transfer">
                <header>

                    <!-- Buttons (keep your workflow style) -->
                    <button name="action_submit" type="object"
                            string="ğŸ“¤ Submit" class="btn-primary"/>

                    <button name="action_approve" type="object"
                            string="âœ… Approve" class="btn-primary"/>

                    <button name="action_reject" type="object"
                            string="ğŸ›‘ Reject" class="btn-danger"/>

                    <button name="action_reset_to_draft" type="object"
                            string="â†©ï¸ Reset to Draft" class="btn-secondary"/>

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-secondary"/>

                </header>

                <sheet>

                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Main Info -->
                    <group>
                        <group>
                            <field name="transfer_date"/>
                        </group>
                        <group>
                            <field name="move_ref" readonly="1"/>
                        </group>
                    </group>

                    <!-- ========================= -->
                    <!-- Transfer Details -->
                    <!-- ========================= -->
                    <group string="Material Transfer Details">
                        <group>
                            <field name="source_warehouse_id"/>
                            <field name="destination_warehouse_id"/>
                        </group>

                        <group>
                            <field name="source_location_id"/>
                            <field name="destination_location_id"/>
                        </group>
                    </group>

                    <!-- ========================= -->
                    <!-- Product Lines -->
                    <!-- ========================= -->
                    <notebook>
                        <page string="Products">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="item_id"/>
                                    <field name="qty"/>

                                    <!-- Availability -->
                                    <field name="available_qty" readonly="1"/>
                                    <field name="stock_indicator"
                                           widget="badge"
                                           decoration-success="stock_indicator == 'green'"
                                           decoration-danger="stock_indicator == 'red'"/>
                                </tree>
                            </field>
                        </page>

                        <!-- Traceability -->
                        <page string="Traceability">
                            <group>
                                <field name="move_ref" readonly="1"/>
                            </group>
                        </page>

                        <!-- Notes -->
                        <page string="Notes">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                    </notebook>

                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- Action -->
    <!-- ========================= -->
    <record id="action_internal_transfer" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">idil.internal.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Internal Transfers between warehouses and locations.
            </p>
        </field>
    </record>

</odoo>
