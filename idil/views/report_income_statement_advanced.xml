<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_income_statement_advanced_template">
        <t t-call="web.html_container">

            <!-- Fetch report data -->
            <t t-set="rd"
               t-value="env['idil.chart.account.header'].get_income_statement_advanced_data(
                    data.get('company_id') if data else (company_id or res_company.id),
                    data.get('report_date') if data else report_date
               )"/>

            <div class="page"
                 style="font-family: 'Inter', 'Segoe UI', Arial, sans-serif; color: #334155; max-width: 1000px; margin: 0 auto; background: white; padding: 40px;">

                <style>
                    .bs-header { display: flex; justify-content: space-between; align-items: flex-start; border-bottom: 2px solid #e2e8f0; padding-bottom: 30px; margin-bottom: 40px; }
                    .company-info h1 { font-size: 32px; font-weight: 800; color: #1e293b; margin: 0 0 10px 0; letter-spacing: -1px; }
                    .report-meta { color: #64748b; font-size: 14px; }
                    .report-meta strong { color: #0f172a; }

                    .section-divider { background: #f8fafc; padding: 12px 20px; font-size: 16px; font-weight: 800; color: #1e293b; text-transform: uppercase; letter-spacing: 1px; border-left: 4px solid #1e293b; margin: 30px 0 15px 0; }
                    .bs-table { width: 100%; border-collapse: separate; border-spacing: 0; margin-bottom: 20px; }
                    .header-name { padding: 12px 20px; font-size: 15px; font-weight: 700; color: #334155; border-bottom: 1px solid #e2e8f0; background: #fbfcfd; }
                    .subheader-name { padding: 8px 20px 8px 30px; font-size: 13px; font-weight: 600; color: #475569; border-bottom: 1px solid #f1f5f9; }
                    .account-row td { padding: 8px 20px 8px 50px; border-bottom: 1px solid #f8fafc; font-size: 12px; }
                    .account-code { color: #94a3b8; width: 100px; }
                    .account-balance { text-align: right; font-weight: 500; color: #0f172a; width: 160px; }

                    .total-row { background: #f1f5f9; font-weight: 700; }
                    .total-row td { padding: 12px 20px; border-top: 1px solid #e2e8f0; font-size: 14px; color: #1e293b; }

                    .profit-banner { margin-top: 30px; padding: 20px; border-radius: 8px; text-align: center; }
                    .profit-positive { background: #f0fdf4; color: #166534; border: 1px solid #bbf7d0; }
                    .profit-negative { background: #fff1f2; color: #991b1b; border: 1px solid #fecaca; }
                </style>

                <!-- Report Header -->
                <div class="bs-header">
                    <div class="company-info">
                        <h1>Income Statement</h1>

                        <t t-set="company" t-value="env['res.company'].browse(rd.get('company_id') or res_company.id)"/>

                        <div class="report-meta">
                            <div style="font-size: 18px; font-weight: 700; color: #1e293b; margin-bottom: 5px;">
                                <t t-esc="company.name"/>
                            </div>

                            <div t-if="company.street">
                                <t t-esc="company.street"/>
                                <t t-if="company.city">, <t t-esc="company.city"/></t>
                            </div>

                            <div t-if="company.phone">Phone: <t t-esc="company.phone"/></div>
                            <div t-if="company.email">Email: <t t-esc="company.email"/></div>

                            <div style="margin-top: 10px;">
                                Reference Date: <strong><t t-esc="rd['report_date']"/></strong>
                            </div>
                        </div>
                    </div>

                    <div class="logo-container">
                        <!-- âœ… FIX: remove .decode() -->
                        <img t-if="company.logo"
                             t-att-src="'data:image/png;base64,%s' % company.logo"
                             alt="Company Logo"
                             style="max-height: 100px;"/>
                    </div>
                </div>

                <!-- ===================== -->
                <!-- REVENUE SECTION -->
                <!-- ===================== -->
                <div class="section-divider">Revenue &amp; Income</div>

                <table class="bs-table">
                    <t t-foreach="rd['income']" t-as="sh">
                        <tr class="subheader-row">
                            <td colspan="3" class="subheader-name">
                                <t t-esc="sh['name']"/>
                            </td>
                        </tr>

                        <t t-foreach="sh['lines']" t-as="acc">
                            <tr class="account-row">
                                <td class="account-code"><t t-esc="acc['code']"/></td>
                                <td class="account-name"><t t-esc="acc['name']"/></td>
                                <td class="account-balance"><t t-esc="acc['amount']"/></td>
                            </tr>
                        </t>

                        <tr class="total-row">
                            <td colspan="2" style="text-align: right; padding-right: 40px;">
                                Subtotal <t t-esc="sh['name']"/>
                            </td>
                            <td class="account-balance"><t t-esc="sh['subtotal_fmt']"/></td>
                        </tr>
                    </t>
                </table>

                <table class="bs-table" style="margin-top: -10px;">
                    <tr class="total-row" style="background: #e0f2fe; border-top: 2px solid #0369a1;">
                        <td colspan="2" style="text-align: right; font-size: 15px; color: #0369a1;">
                            TOTAL REVENUE
                        </td>
                        <td class="account-balance" style="font-size: 16px; color: #0369a1;">
                            <t t-esc="rd['total_income']"/>
                        </td>
                    </tr>
                </table>

                <!-- ===================== -->
                <!-- COGS SECTION -->
                <!-- ===================== -->
                <t t-if="rd['cogs']">
                    <div class="section-divider">Cost of Goods Sold</div>

                    <table class="bs-table">
                        <t t-foreach="rd['cogs']" t-as="sh">
                            <tr class="subheader-row">
                                <td colspan="3" class="subheader-name">
                                    <t t-esc="sh['name']"/>
                                </td>
                            </tr>

                            <t t-foreach="sh['lines']" t-as="acc">
                                <tr class="account-row">
                                    <td class="account-code"><t t-esc="acc['code']"/></td>
                                    <td class="account-name"><t t-esc="acc['name']"/></td>
                                    <td class="account-balance"><t t-esc="acc['amount']"/></td>
                                </tr>
                            </t>

                            <tr class="total-row">
                                <td colspan="2" style="text-align: right; padding-right: 40px;">
                                    Subtotal <t t-esc="sh['name']"/>
                                </td>
                                <td class="account-balance"><t t-esc="sh['subtotal_fmt']"/></td>
                            </tr>
                        </t>
                    </table>

                    <table class="bs-table" style="margin-top: -10px;">
                        <tr class="total-row" style="background: #fff7ed; border-top: 2px solid #9a3412;">
                            <td colspan="2" style="text-align: right; font-size: 15px; color: #9a3412;">
                                TOTAL COGS
                            </td>
                            <td class="account-balance" style="font-size: 16px; color: #9a3412;">
                                <t t-esc="rd['total_cogs']"/>
                            </td>
                        </tr>
                    </table>
                </t>

                <!-- ===================== -->
                <!-- GROSS PROFIT / LOSS -->
                <!-- ===================== -->
                <table class="bs-table" style="margin-top: 10px;">
                    <tr class="total-row" style="background: #f0fdf4; border-top: 2px solid #166534;">
                        <td colspan="2" style="text-align: right; font-size: 15px; color: #166534;">
                            GROSS PROFIT / (LOSS)
                        </td>
                        <td class="account-balance" style="font-size: 16px; color: #166534;">
                            <t t-esc="rd['gross_profit_formatted']"/>
                        </td>
                    </tr>
                </table>

                <!-- ===================== -->
                <!-- EXPENSES SECTION -->
                <!-- ===================== -->
                <div class="section-divider">Operating Expenses</div>

                <table class="bs-table">
                    <t t-foreach="rd['operating_expenses']" t-as="sh">
                        <tr class="subheader-row">
                            <td colspan="3" class="subheader-name">
                                <t t-esc="sh['name']"/>
                            </td>
                        </tr>

                        <t t-foreach="sh['lines']" t-as="acc">
                            <tr class="account-row">
                                <td class="account-code"><t t-esc="acc['code']"/></td>
                                <td class="account-name"><t t-esc="acc['name']"/></td>
                                <td class="account-balance"><t t-esc="acc['amount']"/></td>
                            </tr>
                        </t>

                        <tr class="total-row">
                            <td colspan="2" style="text-align: right; padding-right: 40px;">
                                Subtotal <t t-esc="sh['name']"/>
                            </td>
                            <td class="account-balance"><t t-esc="sh['subtotal_fmt']"/></td>
                        </tr>
                    </t>
                </table>

                <table class="bs-table" style="margin-top: -10px;">
                    <tr class="total-row" style="background: #fef2f2; border-top: 2px solid #991b1b;">
                        <td colspan="2" style="text-align: right; font-size: 15px; color: #991b1b;">
                            TOTAL OPERATING EXPENSES
                        </td>
                        <td class="account-balance" style="font-size: 16px; color: #991b1b;">
                            <t t-esc="rd['total_operating_expenses']"/>
                        </td>
                    </tr>
                </table>

                <!-- ===================== -->
                <!-- NET PROFIT BANNER -->
                <!-- ===================== -->
                <div t-attf-class="profit-banner #{'profit-positive' if rd['net_profit'] &gt;= 0 else 'profit-negative'}">
                    <div style="font-size: 14px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px;">
                        <t t-if="rd['net_profit'] &gt;= 0">Net Profit</t>
                        <t t-else="">Net Loss</t>
                    </div>
                    <div style="font-size: 32px; font-weight: 800;">
                        <t t-esc="rd['net_profit_formatted']"/>
                    </div>
                </div>

                <div class="footer-note"
                     style="margin-top: 50px; padding-top: 20px; border-top: 1px solid #e2e8f0; text-align: center; font-size: 11px; color: #94a3b8;">
                    This Profit and Loss statement is automatically generated and covers all revenue and expenditure accounts.<br/>
                    Confidential Report - <t t-esc="rd['report_date']"/>
                </div>

            </div>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_income_statement_advanced" model="ir.actions.report">
        <field name="name">Advanced Income Statement</field>
        <field name="model">idil.chart.account.header</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">idil.report_income_statement_advanced_template</field>
        <field name="report_file">idil.report_income_statement_advanced_template</field>
    </record>

    <!-- Wizard View -->
    <record id="view_report_income_statement_advanced_wizard_form" model="ir.ui.view">
        <field name="name">report.income.statement.advanced.wizard.form</field>
        <field name="model">report.income.statement.advanced.wizard</field>
        <field name="arch" type="xml">
            <form string="Income Statement Report">
                <group>
                    <field name="company_id"/>
                    <field name="report_date"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_report_income_statement_advanced_wizard" model="ir.actions.act_window">
        <field name="name">Advanced Income Statement</field>
        <field name="res_model">report.income.statement.advanced.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
