<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_customer_outstanding_wizard_form" model="ir.ui.view">
        <field name="name">idil.customer.outstanding.wizard.form</field>
        <field name="model">idil.customer.outstanding.wizard</field>
        <field name="arch" type="xml">
            <form string="Customer Outstanding Balance Report">
                <group>
                    <group>
                        <field name="as_of_date"/>
                        <field name="min_balance"/>
                    </group>
                    <group>
                        <field name="customer_id" options="{'no_create': True}"/>
                        <field name="salesperson_id" options="{'no_create': True}"/>
                        <field name="include_salesperson_ar"/>
                    </group>
                </group>
                <footer>
                    <button string="Print Report" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_customer_outstanding_wizard" model="ir.actions.act_window">
        <field name="name">Customer Outstanding Balance Report</field>
        <field name="res_model">idil.customer.outstanding.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Report Action -->
    <record id="action_report_customer_outstanding" model="ir.actions.report">
        <field name="name">Customer Outstanding Balance Report</field>
        <field name="model">idil.customer.outstanding.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">idil.report_customer_outstanding_template</field>
        <field name="report_file">idil.report_customer_outstanding_template</field>
        <field name="binding_model_id" ref="model_idil_customer_outstanding_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template -->
    <template id="report_customer_outstanding_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center mb-4">
                        <h2>ðŸ’° Customer Outstanding Balance Report</h2>
                        <p>
                            <strong>As of Date:</strong> <span t-esc="data['as_of_date']"/>
                            <br/>
                            <strong>Customer:</strong> <span t-esc="data['customer_name']"/>
                            |
                            <strong>Salesperson:</strong> <span t-esc="data['salesperson_name']"/>
                        </p>
                    </div>

                    <!-- Aging Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-2 text-center">
                            <div style="background: #e8f5e9; padding: 10px; border-radius: 8px;">
                                <h6>0-30 Days</h6>
                                <h4 style="color: #2e7d32;" t-esc="'{:,.2f}'.format(data['total_0_30'])"/>
                            </div>
                        </div>
                        <div class="col-2 text-center">
                            <div style="background: #fff3e0; padding: 10px; border-radius: 8px;">
                                <h6>31-60 Days</h6>
                                <h4 style="color: #ef6c00;" t-esc="'{:,.2f}'.format(data['total_31_60'])"/>
                            </div>
                        </div>
                        <div class="col-2 text-center">
                            <div style="background: #fff8e1; padding: 10px; border-radius: 8px;">
                                <h6>61-90 Days</h6>
                                <h4 style="color: #f9a825;" t-esc="'{:,.2f}'.format(data['total_61_90'])"/>
                            </div>
                        </div>
                        <div class="col-2 text-center">
                            <div style="background: #ffebee; padding: 10px; border-radius: 8px;">
                                <h6>90+ Days</h6>
                                <h4 style="color: #c62828;" t-esc="'{:,.2f}'.format(data['total_90_plus'])"/>
                            </div>
                        </div>
                        <div class="col-4 text-center">
                            <div style="background: #e3f2fd; padding: 10px; border-radius: 8px;">
                                <h6>Total Outstanding</h6>
                                <h3 style="color: #1565c0;" t-esc="'{:,.2f}'.format(data['total_outstanding'])"/>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Summary Table -->
                    <table class="table table-sm table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Contact</th>
                                <th class="text-right">Receipts</th>
                                <th class="text-right">0-30</th>
                                <th class="text-right">31-60</th>
                                <th class="text-right">61-90</th>
                                <th class="text-right">90+</th>
                                <th class="text-right">Total Outstanding</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data['customers']" t-as="cust">
                                <td><span t-esc="cust['type']"/></td>
                                <td><strong><span t-esc="cust['name']"/></strong></td>
                                <td><span t-esc="cust['contact']"/></td>
                                <td class="text-right"><span t-esc="cust['receipt_count']"/></td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(cust['bucket_0_30'])"/></td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(cust['bucket_31_60'])"/></td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(cust['bucket_61_90'])"/></td>
                                <td class="text-right">
                                    <span t-if="cust['bucket_90_plus'] > 0" style="color: #c62828; font-weight: bold;" t-esc="'{:,.2f}'.format(cust['bucket_90_plus'])"/>
                                    <span t-else="" t-esc="'{:,.2f}'.format(cust['bucket_90_plus'])"/>
                                </td>
                                <td class="text-right"><strong><span t-esc="'{:,.2f}'.format(cust['outstanding'])"/></strong></td>
                            </tr>
                            <tr t-if="not data['customers']">
                                <td colspan="9" class="text-center">âœ… No outstanding balances found.</td>
                            </tr>
                            <tr class="font-weight-bold" style="background: #f5f5f5;">
                                <td colspan="4">Total (<span t-esc="data['total_customers']"/> accounts)</td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(data['total_0_30'])"/></td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(data['total_31_60'])"/></td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(data['total_61_90'])"/></td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(data['total_90_plus'])"/></td>
                                <td class="text-right"><span t-esc="'{:,.2f}'.format(data['total_outstanding'])"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
