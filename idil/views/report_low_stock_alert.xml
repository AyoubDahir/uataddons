<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_low_stock_alert_wizard_form" model="ir.ui.view">
        <field name="name">idil.low.stock.alert.wizard.form</field>
        <field name="model">idil.low.stock.alert.wizard</field>
        <field name="arch" type="xml">
            <form string="Low Stock Alert Report">
                <group>
                    <group>
                        <field name="threshold"/>
                        <field name="include_zero_stock"/>
                    </group>
                    <group>
                        <field name="category_id" options="{'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Print Report" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_low_stock_alert_wizard" model="ir.actions.act_window">
        <field name="name">Low Stock Alert Report</field>
        <field name="res_model">idil.low.stock.alert.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Report Action -->
    <record id="action_report_low_stock_alert" model="ir.actions.report">
        <field name="name">Low Stock Alert Report</field>
        <field name="model">idil.low.stock.alert.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">idil.report_low_stock_alert_template</field>
        <field name="report_file">idil.report_low_stock_alert_template</field>
        <field name="binding_model_id" ref="model_idil_low_stock_alert_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template -->
    <template id="report_low_stock_alert_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-family: 'Segoe UI', Arial, sans-serif;">
                    <!-- Report Header -->
                    <div style="background-color: #1a237e; color: white; padding: 20px; margin-bottom: 25px; border-bottom: 4px solid #3949ab;">
                        <h1 style="font-size: 24px; font-weight: bold; margin: 0 0 8px 0; color: white;">Low Stock Alert Report</h1>
                        <div style="font-size: 12px; color: #c5cae9;">
                            Report Date: <strong style="color: white;"><t t-esc="data['report_date']"/></strong>
                        </div>
                    </div>

                    <!-- Filter Summary -->
                    <div style="background-color: #f5f5f5; padding: 12px 15px; margin-bottom: 20px; border-radius: 4px; font-size: 11px;">
                        <strong>Filters:</strong>
                        Threshold: <span style="color: #1a237e;">Below <t t-esc="data['threshold']"/> units</span> |
                        Category: <span style="color: #1a237e;"><t t-esc="data['category_name']"/></span>
                    </div>

                    <!-- Summary Table -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: left; font-weight: bold; color: #333; width: 50%;">Summary</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 12px 10px; text-align: right; font-weight: bold; color: #333; width: 50%;">Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background-color: #e8eaf6;">
                                <td colspan="2" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    ► STOCK SUMMARY
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;">Critical (Zero Stock)</td>
                                <td style="padding: 8px 10px; text-align: right; color: #c62828; border-bottom: 1px solid #eeeeee; font-weight: bold;">
                                    <t t-esc="data['critical_count']"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;">Low Stock Items</td>
                                <td style="padding: 8px 10px; text-align: right; color: #ef6c00; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                    <t t-esc="data['low_count']"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;">Total Items</td>
                                <td style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                    <t t-esc="data['total_items']"/>
                                </td>
                            </tr>
                            <tr style="background-color: #1a237e;">
                                <td style="padding: 15px 10px; font-weight: bold; font-size: 13px; color: white;">
                                    RESTOCK VALUE
                                </td>
                                <td style="padding: 15px 10px; text-align: right; font-weight: bold; font-size: 14px; color: white;">
                                    <t t-esc="'{:,.2f}'.format(data['total_value_at_risk'])"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Items Table -->
                    <table style="width: 100%; border-collapse: collapse; margin-top: 10px; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #e8eaf6;">
                                <td colspan="8" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    ► ITEM DETAILS
                                </td>
                            </tr>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Item</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Category</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Current Qty</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Unit</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Cost/Unit</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Shortage</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Restock Value</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: center; font-weight: bold; color: #333;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data['items']" t-as="item">
                                <tr>
                                    <td style="padding: 8px 10px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="item['name']"/></td>
                                    <td style="padding: 8px 10px; color: #757575; border-bottom: 1px solid #eeeeee;"><t t-esc="item['category']"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #5c6bc0; border-bottom: 1px solid #eeeeee;"><t t-esc="'{:,.2f}'.format(item['quantity'])"/></td>
                                    <td style="padding: 8px 10px; color: #757575; border-bottom: 1px solid #eeeeee;"><t t-esc="item['unit']"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #424242; border-bottom: 1px solid #eeeeee;"><t t-esc="'{:,.2f}'.format(item['cost_price'])"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #ef6c00; border-bottom: 1px solid #eeeeee;"><t t-esc="'{:,.2f}'.format(item['shortage'])"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="'{:,.2f}'.format(item['value_needed'])"/></td>
                                    <td style="padding: 8px 10px; text-align: center; border-bottom: 1px solid #eeeeee;">
                                        <t t-if="item['status'] == 'Critical'">
                                            <span style="background-color: #ffebee; color: #c62828; padding: 2px 8px; border-radius: 3px; font-size: 10px; font-weight: bold;">Critical</span>
                                        </t>
                                        <t t-if="item['status'] == 'Low'">
                                            <span style="background-color: #fff3e0; color: #ef6c00; padding: 2px 8px; border-radius: 3px; font-size: 10px; font-weight: bold;">Low</span>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="not data['items']">
                                <tr>
                                    <td colspan="8" style="padding: 20px 10px; text-align: center; color: #9e9e9e; font-style: italic; border-bottom: 1px solid #eeeeee;">
                                        No items below the threshold. Stock levels are healthy!
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
