<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_sales_commission_tree" model="ir.ui.view">
        <field name="name">idil.sales.commission.tree</field>
        <field name="model">idil.sales.commission</field>
        <field name="arch" type="xml">
            <tree string="Sales Commissions" 
                  decoration-success="is_payable == True" 
                  decoration-muted="payment_status == 'paid'"
                  create="false" edit="false">
                <field name="date"/>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="sales_person_id"/>
                <field name="payment_schedule"/>
                <field name="due_date"/>
                <field name="is_payable" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="commission_amount" sum="Total Amount"/>
                <field name="commission_paid" sum="Total Paid"/>
                <field name="commission_remaining" sum="Total Remaining"/>
                
                <field name="state" widget="badge" 
                       decoration-success="payment_status == 'normal'"
                       decoration-warning="payment_status == 'cancelled_return'"/>


                <field name="payment_status" widget="badge" 
                       decoration-success="payment_status == 'paid'"
                       decoration-warning="payment_status == 'partial_paid'"
                       decoration-info="payment_status == 'pending'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sales_commission_form" model="ir.ui.view">
        <field name="name">idil.sales.commission.form</field>
        <field name="model">idil.sales.commission</field>
        <field name="arch" type="xml">
            <form string="Sales Commission" create="false" edit="false">
                <header>
                    
                     <field name="state" widget="badge" 
                       decoration-success="payment_status == 'normal'"
                       decoration-warning="payment_status == 'cancelled_return'"/>


                <field name="payment_status" widget="badge" 
                       decoration-success="payment_status == 'paid'"
                       decoration-warning="payment_status == 'partial_paid'"
                       decoration-info="payment_status == 'pending'"/>
                       
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Commission Details">
                            <field name="sales_person_id"/>
                            <field name="sale_order_id"/>
                            <field name="date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Payment Schedule">
                            <field name="payment_schedule"/>
                            <field name="due_date"/>
                            <field name="is_payable"/>
                        </group>
                    </group>
                    <group string="Amounts">
                        <group>
                            <field name="commission_amount"/>
                            <field name="commission_paid"/>
                            <field name="commission_remaining" class="oe_subtotal_footer_separator"/>
                        </group>
                        <group string="Process Payment" invisible="payment_status == 'paid'">
                            <field name="cash_account_id" options="{'no_create': True}"/>
                            <field name="amount_to_pay"/>
                            <button name="pay_commission" string="Pay Commission" 
                                    type="object" class="oe_highlight" 
                                    invisible="amount_to_pay &lt;= 0 or payment_status == 'paid' or commission_remaining &lt;= 0"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Payments">
                            <field name="payment_ids" readonly="1">
                                <tree>
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="cash_account_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sales_commission_search" model="ir.ui.view">
        <field name="name">idil.sales.commission.search</field>
        <field name="model">idil.sales.commission</field>
        <field name="arch" type="xml">
            <search string="Search Sales Commissions">
                <field name="name"/>
                <field name="sales_person_id"/>
                <field name="sale_order_id"/>
                
                <filter string="Payable Now" name="payable_now" 
                        domain="[('is_payable', '=', True)]"/>
                <filter string="Pending" name="pending" 
                        domain="[('payment_status', '=', 'pending')]"/>
                <filter string="Paid" name="paid" 
                        domain="[('payment_status', '=', 'paid')]"/>
                        
                <separator/>
                
                <filter string="Daily Schedule" name="daily" 
                        domain="[('payment_schedule', '=', 'daily')]"/>
                <filter string="Monthly Schedule" name="monthly" 
                        domain="[('payment_schedule', '=', 'monthly')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Salesperson" name="group_salesperson" 
                            context="{'group_by': 'sales_person_id'}"/>
                    <filter string="Payment Schedule" name="group_schedule" 
                            context="{'group_by': 'payment_schedule'}"/>
                    <filter string="Due Date" name="group_due_date" 
                            context="{'group_by': 'due_date'}"/>
                    <filter string="Status" name="group_status" 
                            context="{'group_by': 'payment_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_sales_commission" model="ir.actions.act_window">
        <field name="name">Sales Commissions</field>
        <field name="res_model">idil.sales.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sales commissions found
            </p>
            <p>
                Sales commissions will appear here when sale orders are confirmed.
            </p>
        </field>
    </record>

    <record id="action_sales_commission_payable" model="ir.actions.act_window">
        <field name="name">Commissions Payable Now</field>
        <field name="res_model">idil.sales.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_payable', '=', True)]</field>
        <field name="context">{'search_default_group_salesperson': 1}</field>
    </record>

    <!-- Menus -->
    <!-- Assuming there is a parent menu for Sales Operations or similar -->
    <!-- You might need to adjust the parent="idil.menu_sales_operations" based on existing menus -->
    
    

</odoo>
