<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <!-- Product Tree View -->
        <record id="view_product_tree" model="ir.ui.view">
            <field name="name">product.tree</field>
            <field name="model">my_product.product</field>
            <field name="arch" type="xml">
                <tree string="Products" delete="False" decoration-danger="stock_quantity &lt; 10">
                    <field name="image_1920" widget="image" options="{'size': (20, 20)}"/>
                    <field name="name"/>
                    <field name="internal_reference" optional="hide"/>

                    <field name="rate_currency_id" optional="hide"/>
                    <field name="rate" optional="hide"/>

                    <field name="stock_quantity" readonly="1" optional="show"/>
                    <field name="category_id" optional="show"/>
                    <field name="detailed_type" optional="show"/>
                    <field name="asset_account_id" optional="hide"/>

                    <field name="sale_price" optional="show"/>
                    <field name="usd_currency_id" optional="hide"/>
                    <field name="total_value_usd" sum="total" optional="show"/>
                    <field name="actual_cost" sum="total" widget="float" options="{'precision': 4}" optional="hide"/>

                    <field name="is_commissionable" optional="hide"/>
                    <field name="account_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- Product Form View -->
        <record id="view_product_form" model="ir.ui.view">
            <field name="name">product.form</field>
            <field name="model">my_product.product</field>
            <field name="arch" type="xml">
                <form string="Product">
                    <header>
                        <button string="Product Information" class="oe_highlight" colspan="4"/>
                        <button name="export_movements_to_excel"
                                type="object"
                                string="Export Movements to Excel"
                                class="oe_highlight"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Product Name"/>
                            </h1>
                        </div>

                        <!-- Top identity section -->
                        <group col="4">
                            <group col="2">
                                <field name="internal_reference"/>
                                <field name="detailed_type"/>
                                <field name="category_id"/>
                            </group>
                            <group col="1">
                                <field name="image_1920"
                                       widget="image"
                                       options="{'size': [150, 150]}"/>
                            </group>
                        </group>

                        <notebook>

                            <!-- Inventory Information Page -->
                            <page string="Inventory Information">
                                <group col="4">
                                    <group col="2" string="Inventory">
                                        <field name="uom_id"/>
                                        <field name="asset_currency_id"/>
                                        <field name="asset_account_id"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Sales Information Page -->
                            <page string="Sales Information">
                                <!-- outer group has no col; inner groups will flex and auto-fit -->
                                <group>
                                    <group string="Sales Details">
                                        <field name="stock_quantity" readonly="1"/>
                                        <field name="sale_price"/>
                                        <field name="sales_currency_id"/>
                                        <field name="sales_account_id"/>
                                        <field name="income_account_id"/>
                                    </group>

                                    <group string="Quantity Discount">
                                        <field name="is_quantity_discount"/>
                                        <field name="discount_currency_id" invisible="not is_quantity_discount"/>
                                        <field name="sales_discount_id" invisible="not is_quantity_discount"/>
                                        <field name="discount" invisible="not is_quantity_discount"/>
                                    </group>

                                    <group string="Sales Commission (When Sold)">
                                        <field name="is_sales_commissionable"/>
                                        <field name="commission"
                                               invisible="not is_sales_commissionable"
                                               string="Commission Rate (%)"/>
                                        <field name="sales_currency_id"
                                               invisible="not is_sales_commissionable"/>
                                        <field name="sales_account_id"
                                               invisible="not is_sales_commissionable"
                                               string="Commission Expenses Account"/>
                                    </group>
                                </group>
                            </page> 

                            <!-- Costing Information Page -->
                            <page string="Costing Information">
                                <group col="2">
                                    <group string="Cost &amp; BoM" col="2">
                                        <field name="bom_id"/>
                                        <field name="is_cost_manual_purchase"/>
                                        <field name="cost"/>
                                    </group>

                                    <group string="COGS &amp; Adjustment Accounts" col="2">
                                        <field name="currency_cogs_id"/>
                                        <field name="cost_value_currency_id"/>
                                        <field name="account_cogs_id"/>
                                        <field name="account_adjustment_id"/>
                                    </group>

                                    <group string="Manufacturing Commission" col="2">
                                        <field name="is_commissionable" string="Commissionable"/>
                                        <field name="currency_id" invisible="not is_commissionable"/>
                                        <field name="account_id"
                                               invisible="not is_commissionable"
                                               string="Commission Expenses Account"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Movement History Page -->
                            <page string="Movement History">
                                <group col="4">
                                    <group col="2">
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </group>
                                </group>

                                <group col="1">
                                    <field name="movement_ids">
                                        <tree create="false"
                                              delete="false"
                                              editable="false"
                                              limit="100">
                                            <field name="date" readonly="1"/>
                                            <field name="movement_type" readonly="1"/>
                                            <field name="vendor_id" readonly="1"/>
                                            <field name="quantity" readonly="1" sum="Total"/>
                                            <field name="source_document" readonly="1"/>
                                            <field name="sales_person_id" readonly="1"/>
                                            <field name="customer_id" readonly="1"/>
                                            <field name="destination" readonly="1"/>
                                            <field name="employee_id" readonly="1"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Product Action -->
        <record id="action_view_product" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">my_product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new product.
                </p>
            </field>
        </record>

    </data>
</odoo>
