<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================
         TREE VIEW
    ========================== -->
    <record id="view_idil_payment_method_tree" model="ir.ui.view">
        <field name="name">idil.payment.method.tree</field>
        <field name="model">idil.payment.method</field>
        <field name="arch" type="xml">
            <tree string="Payment Methods">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id"/>
                <field name="account_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- =========================
         FORM VIEW
    ========================== -->
    <record id="view_idil_payment_method_form" model="ir.ui.view">
        <field name="name">idil.payment.method.form</field>
        <field name="model">idil.payment.method</field>
        <field name="arch" type="xml">
            <form string="Payment Method">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Cash - Main Safe"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="code" required="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="account_id" required="1"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- =========================
         ACTION
    ========================== -->
    <record id="action_idil_payment_method" model="ir.actions.act_window">
        <field name="name">Payment Methods</field>
        <field name="res_model">idil.payment.method</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_idil_payment_method_tree"/>
        <field name="help" type="html">
            <div class="o_view_nocontent_smiling_face">
                <p>Create payment methods and link each one to a default cash/bank account.</p>
            </div>
        </field>
    </record>

    <!-- =========================
         MENUS
         Put under Accounting > Configuration
    ========================== -->

    <!-- Parent menu (only if you don't already have it in your module) -->
  

  

</odoo>
