<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- ACTION -->
  <record id="action_purchase_receipt" model="ir.actions.act_window">
    <field name="name">Purchase Receipts</field>
    <field name="res_model">idil.purchase.receipt</field>
    <field name="view_mode">tree,form</field>
  </record>

 
  <!-- TREE -->
  <record id="view_purchase_receipt_tree" model="ir.ui.view">
    <field name="name">idil.purchase.receipt.tree</field>
    <field name="model">idil.purchase.receipt</field>
    <field name="arch" type="xml">
      <tree decoration-success="delivery_indicator == 'green'"
                                        decoration-warning="delivery_indicator == 'yellow'"
                                        decoration-info="delivery_indicator == 'orange'"
                                        decoration-danger="delivery_indicator == 'red'">

        <field name="delivery_indicator" decoration-success="delivery_indicator == 'green'"
                                        decoration-warning="delivery_indicator == 'yellow'"
                                        decoration-info="delivery_indicator == 'orange'"
                                        decoration-danger="delivery_indicator == 'red'"
                                        />
        <field name="name"/>
        <field name="purchase_order_id"/>
        <field name="vendor_id"/>
        
        <field name="receipt_date"/>
        <!-- <field name="state"/> -->
        <field name="total_receive_qty"/>

        

        <field name="total_not_coming_qty"/>
        <field name="total_remaining_qty"/>
        
        
        

        <field name="state" widget="statusbar" statusbar_visible="none,partial,full,closed_short"/>
        

      </tree>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_purchase_receipt_form" model="ir.ui.view">
    <field name="name">idil.purchase.receipt.form</field>
    <field name="model">idil.purchase.receipt</field>
    <field name="arch" type="xml">
      <form string="Purchase Receipt">
        <header>
       
        
        <button name="action_open_receive_wizard"
                type="object"
                string="Receive Qty"
                class="btn-primary"
               />

  
          <field name="state" widget="statusbar" statusbar_visible="none,partial,full,closed_short"/>
        </header>

        <sheet>
          <group>
                <group>
                    <field name="name" readonly="1"/>
                    <field name="vendor_id" />
                    <field name="purchase_order_id"
                            domain="vendor_id and [
                                ('vendor_id','=',vendor_id),
                                ('state','=','confirmed'),
                                ('receipt_state','in',['none','partial']),
                            
                            ] or [('id','=',False)]"/>

                </group>

                <group>
                    <field name="material_request_id" />
                </group>

                
                

                <group>
                    <field name="receipt_date" />
                    <field name="total_receive_qty" readonly="1"/>
                    <field name="total_not_coming_qty" readonly="1"/>
                </group>

          </group>

           <notebook>
                <page string="Receipt Lines">
                    <field name="line_ids" create="0" delete="0" options="{'no_create': True}">
                        <tree create="0" delete="0" decoration-success="delivery_indicator == 'green'"
                                                    decoration-warning="delivery_indicator == 'yellow'"
                                                    decoration-info="delivery_indicator == 'orange'"
                                                    decoration-danger="delivery_indicator == 'red'">
                        <button name="action_open_receive_wizard"
                            type="object"
                            string="Receive"
                            icon="fa-plus"/>
                            <field name="purchase_order_line_id" options="{'no_open': True}"/>
                            <field name="item_id" readonly="1"/>
                            <field name="demand_qty" readonly="1" sum="total"/>
                            <field name="already_received" readonly="1" sum="total"/>
                            <field name="cost_price" readonly="1" sum="total"/>
                            <field name="landing_cost" readonly="1" sum="total"/>
                            <field name="total_cost" readonly="1" sum="total"/>
                            <field name="remaining_before" readonly="1" sum="total"/>
                            <field name="not_coming_qty"  readonly="1" sum="total"/>
                             <field name="delivery_indicator" 
                                            widget="badge"
                                            decoration-success="delivery_indicator == 'green'"
                                            decoration-warning="delivery_indicator == 'yellow'"
                                            decoration-info="delivery_indicator == 'orange'"
                                            decoration-danger="delivery_indicator == 'red'"
                                           />
      
                        </tree>
                    </field>
                </page>

                <page string="Chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </page>

            </notebook>

            <notebook>
                <page string="Receive History">
                    <field name="received_history_ids" create="0" delete="0">
                        <tree>
                            

                            <field name="received_date"/>
                            <field name="purchase_order_id"/>
                            <field name="purchase_order_line_id"/>
                            <field name="receipt_line_id"/>
                            <field name="received_qty" sum="total"/>
                            <field name="cost_price" sum="total"/>
                            <field name="landing_cost" sum="total"/>
                            <field name="total_cost" sum="total"/>
                            <field name="not_coming_qty" sum="total"/>
                            <field name="route_step"/>
                            <field name="condition"/>
                            <field name="status"/>
                            <field name="user_id"/>
                            <button name="action_delete_history"
                                    type="object"
                                    icon="fa-trash"
                                    class="btn-danger"
                                    confirm="Are you sure you want to delete this receive history line?"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </sheet>
      </form>
    </field>
  </record>
 

</odoo>
