<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_kitchen_report_wizard_form" model="ir.ui.view">
        <field name="name">idil.kitchen.report.wizard.form</field>
        <field name="model">idil.kitchen.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Kitchen Quantity Report">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="salesperson_id" options="{'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Print Report" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_kitchen_report_wizard" model="ir.actions.act_window">
        <field name="name">Kitchen Quantity Report</field>
        <field name="res_model">idil.kitchen.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_kitchen_report"
              name="Kitchen Quantity Report"
              parent="idil.menu_general_Operations"
              groups="base.group_user"
              action="action_kitchen_report_wizard"
              sequence="3"/>

    <!-- Report Action -->
    <record id="action_report_kitchen_quantity" model="ir.actions.report">
        <field name="name">Kitchen Quantity Report</field>
        <field name="model">idil.kitchen.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">idil.report_kitchen_quantity_template</field>
        <field name="report_file">idil.report_kitchen_quantity_template</field>
        <field name="binding_model_id" ref="model_idil_kitchen_report_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Report Template -->
    <template id="report_kitchen_quantity_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-family: 'Segoe UI', Arial, sans-serif;">
                    <!-- Report Header -->
                    <div style="background-color: #1a237e; color: white; padding: 20px; margin-bottom: 25px; border-bottom: 4px solid #3949ab;">
                        <h1 style="font-size: 24px; font-weight: bold; margin: 0 0 8px 0; color: white;">Kitchen Quantity Report</h1>
                        <div style="font-size: 12px; color: #c5cae9;">
                            Period: <strong style="color: white;"><t t-esc="data['start_date']"/></strong> to <strong style="color: white;"><t t-esc="data['end_date']"/></strong>
                        </div>
                    </div>

                    <!-- Filter Summary -->
                    <div style="background-color: #f5f5f5; padding: 12px 15px; margin-bottom: 20px; border-radius: 4px; font-size: 11px;">
                        <strong>Filters:</strong>
                        Sales Team: <span style="color: #1a237e;"><t t-esc="data['salesperson_name']"/></span>
                    </div>

                    <!-- Products Table -->
                    <table style="width: 100%; border-collapse: collapse; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #e8eaf6;">
                                <td colspan="3" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    â–º PRODUCT QUANTITIES
                                </td>
                            </tr>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Product</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Total Quantity</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: center; font-weight: bold; color: #333;">UoM</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data['products']" t-as="product">
                                <tr>
                                    <td style="padding: 8px 10px; color: #424242; border-bottom: 1px solid #eeeeee; font-weight: 500;"><t t-esc="product['product_name']"/></td>
                                    <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                        <t t-esc="product['quantity']" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="padding: 8px 10px; text-align: center; color: #757575; border-bottom: 1px solid #eeeeee;"><t t-esc="product['uom']"/></td>
                                </tr>
                            </t>
                            <t t-if="not data['products']">
                                <tr>
                                    <td colspan="3" style="padding: 20px 10px; text-align: center; color: #9e9e9e; font-style: italic; border-bottom: 1px solid #eeeeee;">
                                        No orders found for the selected criteria.
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
