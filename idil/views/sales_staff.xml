<odoo>
    <!-- Define form view for Sales Personnel -->
    <record id="view_sales_personnel_form" model="ir.ui.view">
        <field name="name">sales_personnel.form</field>
        <field name="model">idil.sales.sales_personnel</field>
        <field name="arch" type="xml">
            <form string="Sales Team Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="oe_image">
                        <field name="image" widget="image" options="{'size': (150, 150)}"/>
                    </div>
                    <group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                        </group>
                        <group string="Accounting">
                            <field name="currency_id"/>
                            <field name="account_receivable_id"/>
                        </group>
                    </group>

                    <!-- Commission Settings Section -->
                    <group string="Commission Settings">
                        <group>
                            <field name="commission_payment_schedule" widget="radio"/>
                            <field name="commission_payment_day" 
                                   invisible="commission_payment_schedule == 'daily'"
                                   required="commission_payment_schedule == 'monthly'"/>
                        </group>
                        <group>
                            <div class="alert alert-info" role="alert" 
                                 invisible="commission_payment_schedule == 'daily'">
                                <p><strong>Monthly Payment Schedule</strong></p>
                                <p>Commissions will be paid on day <field name="commission_payment_day" readonly="1" class="oe_inline"/> of each month</p>
                                <p class="text-muted">Example: Sales on Nov 10 → Due on Dec <field name="commission_payment_day" readonly="1" class="oe_inline"/></p>
                            </div>
                            <div class="alert alert-success" role="alert" 
                                 invisible="commission_payment_schedule == 'monthly'">
                                <p><strong>Daily Payment Schedule</strong></p>
                                <p>Commissions are payable on the same day as the sale</p>
                                <p class="text-muted">Example: Sale on Nov 27 → Due on Nov 27</p>
                            </div>
                        </group>
                    </group>

                    <group>
                        <notebook>
                            <!-- Other tabs -->
                            <page string="Transactions">
                                <field name="transaction_ids" readonly="1">
                                    <tree string="Transactions" create="false" delete="false" edit="false">
                                        <field name="date" readonly="1"/>
                                        <field name="transaction_type" readonly="1"/>
                                        <field name="order_id" readonly="1"/>
                                        <field name="description" readonly="1"/>
                                        <field name="amount" readonly="1"/>
                                        <field name="running_balance" readonly="1"/>


                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Define tree view for Sales Personnel -->
    <record id="view_sales_personnel_tree" model="ir.ui.view">
        <field name="name">sales_personnel.tree</field>
        <field name="model">idil.sales.sales_personnel</field>
        <field name="arch" type="xml">
            <tree>

                <field name="image" widget="image" options="{'size': (20, 20)}"/> <!-- Adjust size here -->

                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="commission_payment_schedule"/>
                <field name="address"/>
                <field name="currency_id"/>
                
                <field name="due_amount" sum="total"/>
            </tree>
        </field>
    </record>

    <!-- Define action for Sales Personnel -->
    <record id="action_sales_personnel" model="ir.actions.act_window">
        <field name="name">Sales Personnel</field>
        <field name="res_model">idil.sales.sales_personnel</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
