<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <template id="report_bs_template">
        <t t-call="web.html_container">
            <div class="page" style="font-family: 'Inter', 'Segoe UI', Arial, sans-serif; color: #334155; max-width: 1000px; margin: 0 auto; background: white; padding: 40px;">
                <style>
                    .bs-header { display: flex; justify-content: space-between; align-items: flex-start; border-bottom: 2px solid #e2e8f0; padding-bottom: 30px; margin-bottom: 40px; }
                    .company-info h1 { font-size: 32px; font-weight: 800; color: #1e293b; margin: 0 0 10px 0; letter-spacing: -1px; }
                    .report-meta { color: #64748b; font-size: 14px; }
                    .report-meta strong { color: #0f172a; }
                    .logo-container img { max-height: 80px; width: auto; }
                    
                    .section-divider { background: #f8fafc; padding: 12px 20px; font-size: 16px; font-weight: 800; color: #1e293b; text-transform: uppercase; letter-spacing: 1px; border-left: 4px solid #1e293b; margin: 30px 0 15px 0; }
                    .bs-table { width: 100%; border-collapse: separate; border-spacing: 0; margin-bottom: 20px; }
                    .header-name { padding: 12px 20px; font-size: 15px; font-weight: 700; color: #334155; border-bottom: 1px solid #e2e8f0; background: #fbfcfd; }
                    .subheader-name { padding: 8px 20px 8px 30px; font-size: 13px; font-weight: 600; color: #475569; border-bottom: 1px solid #f1f5f9; }
                    .account-row td { padding: 8px 20px 8px 50px; border-bottom: 1px solid #f8fafc; font-size: 12px; }
                    .account-code { color: #94a3b8; width: 100px; }
                    .account-balance { text-align: right; font-weight: 500; color: #0f172a; }
                    
                    .total-row { background: #f1f5f9; font-weight: 700; }
                    .total-row td { padding: 12px 20px; border-top: 1px solid #e2e8f0; font-size: 14px; color: #1e293b; }
                    
                    .grand-total-section { margin-top: 40px; border-top: 3px double #e2e8f0; padding-top: 20px; }
                    .grand-total-table { width: 100%; }
                    .grand-total-table td { padding: 15px 20px; font-size: 18px; font-weight: 800; }
                    .asset-color { color: #0369a1; }
                    .liab-equity-color { color: #0f172a; }
                    
                    .balanced-banner { margin-top: 30px; padding: 15px; border-radius: 8px; text-align: center; font-weight: 700; }
                    .balanced-true { background: #f0fdf4; color: #166534; border: 1px solid #bbf7d0; }
                    .balanced-false { background: #fff1f2; color: #991b1b; border: 1px solid #fecaca; }
                </style>

                <!-- Report Header -->
                <div class="bs-header">
                    <div class="company-info">
                        <h1>Balance Sheet</h1>
                        <div class="report-meta">
                            <div style="margin-bottom: 4px;">Company: <strong><t t-esc="res_company.name"/></strong></div>
                            <div>Reference Date: <strong><t t-esc="report_date"/></strong></div>
                        </div>
                    </div>
                    <div class="logo-container">
                        <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo.decode()" alt="Company Logo"/>
                    </div>
                </div>

                <t t-set="rd" t-value="docs.get_bs_report_data(company_id, report_date)"/>

                <!-- ASSETS SECTION -->
                <div class="section-divider">Assets</div>
                <t t-foreach="rd['assets']['headers']" t-as="header">
                    <table class="bs-table">
                        <tr class="header-row"><td colspan="3" class="header-name"><t t-esc="header['header_name']"/></td></tr>
                        <t t-foreach="header['sub_headers']" t-as="sh">
                            <tr class="subheader-row"><td colspan="3" class="subheader-name"><t t-esc="sh['sub_header_name']"/></td></tr>
                            <t t-foreach="sh['accounts']" t-as="acc">
                                <tr class="account-row">
                                    <td class="account-code"><t t-esc="acc['account_code']"/></td>
                                    <td class="account-name"><t t-esc="acc['account_name']"/></td>
                                    <td class="account-balance"><t t-esc="acc['balance']"/></td>
                                </tr>
                            </t>
                            <tr class="total-row">
                                <td colspan="2" style="text-align: right; padding-right: 40px; font-size: 12px; color: #64748b;">Subtotal <t t-esc="sh['sub_header_name']"/></td>
                                <td style="text-align: right; width: 150px;"><t t-esc="sh['sub_header_total']"/></td>
                            </tr>
                        </t>
                    </table>
                </t>
                <table class="bs-table" style="margin-top: -10px;">
                    <tr class="total-row" style="background: #e0f2fe; border-top: 2px solid #0369a1;">
                        <td colspan="2" style="text-align: right; font-size: 15px; color: #0369a1;">TOTAL ASSETS</td>
                        <td style="text-align: right; width: 150px; font-size: 16px; color: #0369a1;"><t t-esc="rd['total_assets_formatted']"/></td>
                    </tr>
                </table>

                <!-- LIABILITIES SECTION -->
                <div class="section-divider">Liabilities</div>
                <t t-foreach="rd['liabilities']['headers']" t-as="header">
                    <table class="bs-table">
                        <tr class="header-row"><td colspan="3" class="header-name"><t t-esc="header['header_name']"/></td></tr>
                        <t t-foreach="header['sub_headers']" t-as="sh">
                            <tr class="subheader-row"><td colspan="3" class="subheader-name"><t t-esc="sh['sub_header_name']"/></td></tr>
                            <t t-foreach="sh['accounts']" t-as="acc">
                                <tr class="account-row">
                                    <td class="account-code"><t t-esc="acc['account_code']"/></td>
                                    <td class="account-name"><t t-esc="acc['account_name']"/></td>
                                    <td class="account-balance"><t t-esc="acc['balance']"/></td>
                                </tr>
                            </t>
                            <tr class="total-row">
                                <td colspan="2" style="text-align: right; padding-right: 40px; font-size: 12px; color: #64748b;">Subtotal <t t-esc="sh['sub_header_name']"/></td>
                                <td style="text-align: right; width: 150px;"><t t-esc="sh['sub_header_total']"/></td>
                            </tr>
                        </t>
                    </table>
                </t>

                <!-- EQUITY SECTION -->
                <div class="section-divider">Equity</div>
                <t t-foreach="rd['equity']['headers']" t-as="header">
                    <table class="bs-table">
                        <tr class="header-row"><td colspan="3" class="header-name"><t t-esc="header['header_name']"/></td></tr>
                        <t t-foreach="header['sub_headers']" t-as="sh">
                            <tr class="subheader-row"><td colspan="3" class="subheader-name"><t t-esc="sh['sub_header_name']"/></td></tr>
                            <t t-foreach="sh['accounts']" t-as="acc">
                                <tr class="account-row">
                                    <td class="account-code"><t t-esc="acc['account_code']"/></td>
                                    <td class="account-name"><t t-esc="acc['account_name']"/></td>
                                    <td class="account-balance"><t t-esc="acc['balance']"/></td>
                                </tr>
                            </t>
                            <tr class="total-row">
                                <td colspan="2" style="text-align: right; padding-right: 40px; font-size: 12px; color: #64748b;">Subtotal <t t-esc="sh['sub_header_name']"/></td>
                                <td style="text-align: right; width: 150px;"><t t-esc="sh['sub_header_total']"/></td>
                            </tr>
                        </t>
                    </table>
                </t>

                <!-- Current Period Earnings (Calculated Net Profit) -->
                <table class="bs-table">
                    <tr class="subheader-row" style="background: #fdf2f8;"><td colspan="3" class="subheader-name" style="color: #9d174d;">Retained Earnings &amp; Current Profit</td></tr>
                    <tr class="account-row">
                        <td class="account-code" style="padding-left: 50px;">PL-CALC</td>
                        <td class="account-name"><strong>Current Period Earnings (Net Profit/Loss)</strong></td>
                        <td class="account-balance" style="text-align: right; padding-right: 40px;"><strong><t t-esc="rd['net_profit_formatted']"/></strong></td>
                    </tr>
                </table>

                <!-- TOTAL LIABILITIES & EQUITY -->
                <table class="bs-table">
                    <tr class="total-row" style="background: #1e293b; color: white;">
                        <td colspan="2" style="text-align: right; font-size: 15px; color: white;">TOTAL LIABILITIES &amp; EQUITY</td>
                        <td style="text-align: right; width: 150px; font-size: 16px; color: white;"><t t-esc="rd['total_liab_equity_formatted']"/></td>
                    </tr>
                </table>

                <!-- Check if Balanced -->
                <div t-attf-class="balanced-banner #{'balanced-true' if rd['is_balanced'] else 'balanced-false'}">
                    <t t-if="rd['is_balanced']">
                        <i class="fas fa-check-circle"></i> BALANCE SHEET IS BALANCED (Assets = Liabilities + Equity)
                    </t>
                    <t t-else="">
                        <i class="fas fa-exclamation-triangle"></i> BALANCE SHEET IS OUT OF BALANCE BY <t t-esc="rd['difference']" t-options='{"widget": "float", "precision": 3}'/> <t t-esc="rd['currency_symbol']"/>
                    </t>
                </div>

                <div class="footer-note" style="margin-top: 50px; padding-top: 20px; border-top: 1px solid #e2e8f0; text-align: center; font-size: 11px; color: #94a3b8;">
                    This is an automated Statement of Financial Position generated according to global accounting standards.<br/>
                    Generated for <strong><t t-esc="report_date"/></strong>.
                </div>
            </div>
        </t>
    </template>


    <record id="action_report_bs" model="ir.actions.report">
        <field name="name">Balance Sheet Report</field>
        <field name="model">idil.chart.account.header</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">idil.report_bs_template</field>
        <field name="report_file">idil.report_bs_template</field>
        <field name="binding_model_id" ref="model_idil_chart_account_header"/>
    </record>



    <record id="view_report_currency_wizard_form" model="ir.ui.view">
        <field name="name">report.currency.wizard.form</field>
        <field name="model">report.currency.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Company">
                <group>
                    <field name="company_id"/>
                    <field name="report_date" widget="date"/> <!-- Add this field for selecting the report date -->
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_currency_wizard" model="ir.actions.act_window">
        <field name="name">Company Selection</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.currency.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_report_currency_wizard_form"/>
    </record>

</odoo>
