<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================
         ACTION
    ========================== -->
    <record id="action_product_cost_history" model="ir.actions.act_window">
        <field name="name">Product Cost History</field>
        <field name="res_model">idil.product.cost.history</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No product cost history yet.
            </p>
            <p>
                This table is filled automatically when a Manufacturing Order is confirmed.
            </p>
        </field>
    </record>

    <!-- =========================
         TREE VIEW
    ========================== -->
    <record id="view_product_cost_history_tree" model="ir.ui.view">
        <field name="name">idil.product.cost.history.tree</field>
        <field name="model">idil.product.cost.history</field>
        <field name="arch" type="xml">
            <tree string="Product Cost History" create="0" edit="0" delete="0">
                <field name="scheduled_date"/>
                <field name="manufacturing_order_id"/>
                <field name="product_id"/>
                <field name="produced_qty"/>
                <field name="unit_cost"/>
                <field name="total_cost"/>
                <field name="prev_qty"/>
                <field name="prev_cost"/>
                <field name="new_avg_cost"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- =========================
         FORM VIEW
    ========================== -->
    <record id="view_product_cost_history_form" model="ir.ui.view">
        <field name="name">idil.product.cost.history.form</field>
        <field name="model">idil.product.cost.history</field>
        <field name="arch" type="xml">
            <form string="Product Cost History" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="manufacturing_order_id"/>
                            <field name="product_id"/>
                            <field name="scheduled_date"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="produced_qty"/>
                            <field name="unit_cost"/>
                            <field name="total_cost"/>
                        </group>
                    </group>

                    <separator string="Moving Average Details"/>

                    <group>
                        <group>
                            <field name="prev_qty"/>
                            <field name="prev_cost"/>
                        </group>
                        <group>
                            <field name="new_avg_cost"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =========================
         MENUS (adjust parent ids to your module)
    ========================== -->

