<odoo>
    <template id="report_income_statement_template">
        <t t-call="web.external_layout">
            <div class="page" style="font-family: 'Segoe UI', Arial, sans-serif;">
                <!-- Report Header -->
                <div style="background-color: #1a237e; color: white; padding: 20px; margin-bottom: 25px; border-bottom: 4px solid #3949ab;">
                    <h1 style="font-size: 24px; font-weight: bold; margin: 0 0 8px 0; color: white;">Income Statement</h1>
                    <div style="font-size: 16px; color: white; margin-bottom: 5px;">NAGAAD Coffee, Restaurant, and Wedding Halls</div>
                    <div style="font-size: 12px; color: #c5cae9;">
                        For the Year Ended: <strong style="color: white;"><t t-esc="report_date"/></strong>
                    </div>
                </div>

                <t t-foreach="report_data" t-as="header">
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; font-size: 11px;">
                        <thead>
                            <tr style="background-color: #e8eaf6;">
                                <td colspan="2" style="padding: 12px 10px; font-weight: bold; font-size: 12px; color: #1a237e; border-bottom: 2px solid #c5cae9;">
                                    â–º <t t-esc="header['header_name']"/>
                                </td>
                            </tr>
                            <tr style="background-color: #f5f5f5;">
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: left; font-weight: bold; color: #333;">Account</th>
                                <th style="border-bottom: 2px solid #1a237e; padding: 10px; text-align: right; font-weight: bold; color: #333;">Amount (USD)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="header['subheaders']" t-as="subheader">
                                <tr style="background-color: #f5f5f5;">
                                    <td colspan="2" style="padding: 10px; font-weight: 600; color: #5c6bc0; border-bottom: 1px solid #e0e0e0;">
                                        <t t-esc="subheader['sub_header_name']"/>
                                    </td>
                                </tr>
                                <t t-foreach="subheader['accounts']" t-as="account">
                                    <tr>
                                        <td style="padding: 8px 10px 8px 35px; color: #424242; border-bottom: 1px solid #eeeeee;">
                                            <t t-esc="account['account_name']"/>
                                        </td>
                                        <td style="padding: 8px 10px; text-align: right; color: #2e7d32; border-bottom: 1px solid #eeeeee; font-weight: 500;">
                                            <t t-esc="account['balance']"/> <t t-esc="account['currency_symbol']"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr style="background-color: #f5f5f5;">
                                    <td style="padding: 10px; text-align: right; font-weight: 600; color: #424242; border-bottom: 1px solid #e0e0e0;">
                                        Subtotal
                                    </td>
                                    <td style="padding: 10px; text-align: right; font-weight: bold; color: #1a237e; border-bottom: 1px solid #e0e0e0;">
                                        <t t-esc="subheader['subheader_total']"/> <t t-esc="currency_symbol"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>

                <!-- Footer Note -->
                <div style="text-align: right; font-size: 10px; color: #757575; margin-top: 15px; font-style: italic;">
                    All amounts are expressed in United States Dollars (USD)
                </div>
            </div>
        </t>
    </template>

    <!-- Action for Income Statement Report -->
    <record id="action_report_income_statement_template" model="ir.actions.report">
        <field name="name">Income Statement Report</field>
        <field name="model">idil.chart.account.header</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">idil.report_income_statement_template</field>
        <field name="report_file">idil.report_income_statement_template</field>
        <field name="binding_model_id" ref="model_idil_chart_account_header"/>
    </record>

    <!-- View for Income Report Currency Wizard Form -->
    <record id="view_income_report_currency_wizard_form" model="ir.ui.view">
        <field name="name">report.income.currency.wizard.form</field>
        <field name="model">report.income.currency.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Income Report Currency">
                <group>
                    <field name="currency_id"/>
                    <field name="report_date" widget="date"/>
                </group>
                <footer>
                    <button string="Generate Income Report" type="object" name="generate_income_report"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open Income Statement Wizard -->
    <record id="action_income_report_currency_wizard" model="ir.actions.act_window">
        <field name="name">Income Statement Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.income.currency.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_income_report_currency_wizard_form"/>
    </record>
</odoo>
