<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_receive_wizard_form" model="ir.ui.view">
        <field name="name">idil.purchase.receive.wizard.form</field>
        <field name="model">idil.purchase.receive.wizard</field>
        <field name="arch" type="xml">
            <form string="ðŸ“¥ Receive Purchase" class="o_form_nosheet">

                <sheet>

                    <!-- =========================
                         âœ… Premium Header (Icon + Hint)
                         ========================= -->
                    <div class="oe_title">
                        <h1 class="mb-1">
                            <i class="fa fa-truck me-2 text-primary" role="img" aria-label="Receive"/>
                            Receive Purchase
                        </h1>
                        <div class="text-muted">
                            <i class="fa fa-info-circle me-1"/>
                            Review the document references, enter received quantity &amp; costing, then confirm.
                        </div>
                    </div>

                    <!-- =========================
                         ðŸ§¾ Reference Cards
                         (no label tags, no & alone)
                         ========================= -->
                    <div class="row g-3 mt-2">

                        <!-- Left card -->
                        <div class="col-12 col-lg-6">
                            <div class="border rounded-4 p-3 shadow-sm bg-white">
                                <div class="fw-bold mb-2">
                                    <i class="fa fa-file-text-o me-2 text-muted"/>
                                    Document Reference
                                </div>

                                <div class="d-grid gap-2">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-file-o me-2 text-muted"/>
                                        <field name="receipt_id" readonly="1" nolabel="1" class="w-100"/>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-list-alt me-2 text-muted"/>
                                        <field name="receipt_line_id" readonly="1" nolabel="1" class="w-100"/>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-clipboard me-2 text-muted"/>
                                        <field name="material_request_id" readonly="1" nolabel="1" class="w-100"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right card -->
                        <div class="col-12 col-lg-6">
                            <div class="border rounded-4 p-3 shadow-sm bg-white">
                                <div class="fw-bold mb-2">
                                    <i class="fa fa-shopping-cart me-2 text-muted"/>
                                    Purchase Order Reference
                                </div>

                                <div class="d-grid gap-2">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-shopping-bag me-2 text-muted"/>
                                        <field name="purchase_order_id" readonly="1" nolabel="1" class="w-100"/>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-bars me-2 text-muted"/>
                                        <field name="purchase_order_line_id" readonly="1" nolabel="1" class="w-100"/>
                                    </div>
                                </div>

                                <div class="alert alert-light mt-3 mb-0" role="alert">
                                    <i class="fa fa-shield me-1"/>
                                    These references are locked to prevent mistakes.
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- =========================
                         ðŸ“Œ Main Content Tabs
                         ========================= -->
                    <notebook class="mt-3">

                        <!-- Receiving -->
                        <page string="ðŸ“¦ Receiving" name="page_receiving">
                            <div class="row g-3">

                                <div class="col-12 col-lg-6">
                                    <div class="border rounded-4 p-3 shadow-sm bg-white">
                                        <div class="fw-bold mb-2">
                                            <i class="fa fa-cubes me-2 text-muted"/>
                                            Quantities
                                        </div>

                                        <div class="d-grid gap-3">
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-check-square-o me-2 text-muted"/>
                                                <field name="received_qty" nolabel="1" class="w-100"/>
                                            </div>

                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-ban me-2 text-muted"/>
                                                <field name="not_coming_qty" nolabel="1" class="w-100"/>
                                            </div>

                                            <div class="d-flex align-items-start">
                                                <i class="fa fa-commenting-o me-2 text-muted mt-1"/>
                                                <field name="reason_not_coming"
                                                       nolabel="1"
                                                       class="w-100"
                                                       placeholder="Write a short reason for missing items..."/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-6">
                                    <div class="border rounded-4 p-3 shadow-sm bg-white">
                                        <div class="fw-bold mb-2">
                                            <i class="fa fa-random me-2 text-muted"/>
                                            Route &amp; Condition
                                        </div>

                                        <div class="d-grid gap-3">
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-road me-2 text-muted"/>
                                                <field name="route_step" nolabel="1" class="w-100"/>
                                            </div>

                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-thermometer-half me-2 text-muted"/>
                                                <field name="condition" nolabel="1" class="w-100"/>
                                            </div>
                                        </div>

                                        <div class="alert alert-info mt-3 mb-0" role="alert">
                                            <i class="fa fa-lightbulb-o me-1"/>
                                            Tip: record route and condition to support audit and costing accuracy.
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </page>

                        <!-- Costing -->
                        <page string="ðŸ’° Costing" name="page_costing">
                            <div class="row g-3">

                                <div class="col-12 col-lg-6">
                                    <div class="border rounded-4 p-3 shadow-sm bg-white">
                                        

                                        <div class="d-flex align-items-center">
                                                <i class="fa fa-plane me-2 text-muted"/>
                                                <field name="date" nolabel="1" class="w-100"/>
                                            </div>

                                        <div class="fw-bold mb-2">
                                            <i class="fa fa-tag me-2 text-muted"/>
                                            Unit Costs
                                        </div>

                                        <div class="d-grid gap-3">
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-money me-2 text-muted"/>
                                                <field name="cost_price" nolabel="1" class="w-100"/>
                                            </div>

                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-plane me-2 text-muted"/>
                                                <field name="landing_cost" nolabel="1" class="w-100"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-6">
                                    <div class="border rounded-4 p-3 shadow-sm bg-white">
                                        <div class="fw-bold mb-2">
                                            <i class="fa fa-calculator me-2 text-muted"/>
                                            Totals
                                        </div>

                                        <!-- Total highlight -->
                                        <div class="p-3 rounded-4 bg-light border">
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-line-chart me-2 text-muted"/>
                                                <field name="total_cost" nolabel="1" class="w-100"/>
                                            </div>
                                            <div class="text-muted mt-2">
                                                <i class="fa fa-info-circle me-1"/>
                                                Total cost should reflect unit cost plus landing allocations.
                                            </div>
                                        </div>

                                        <div class="alert alert-success mt-3 mb-0" role="alert">
                                            <i class="fa fa-check me-1"/>
                                            Once confirmed, stock and accounting will be processed.
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </page>

                    </notebook>
                </sheet>

                <!-- Footer Buttons (with icons) -->
                <footer>
                    <button string=" âœ… Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"
                            icon="fa-check"/>

                    <button string=" âœ– Cancel"
                            class="btn-secondary"
                            special="cancel"
                            icon="fa-times"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>
