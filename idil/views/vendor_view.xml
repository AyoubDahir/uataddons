<odoo>

    <!-- ============================= -->
    <!-- Vendor: Tree View -->
    <!-- ============================= -->
    <record id="view_idil_vendor_tree" model="ir.ui.view">
        <field name="name">idil.vendor.tree</field>
        <field name="model">idil.vendor.registration</field>
        <field name="arch" type="xml">
            <tree string="üè¢ Vendors" decoration-muted="not active">
                <field name="image" widget="image" options="{'size': [20, 20]}" class="oe_avatar"/>
                <field name="name" string="üë§ Vendor"/>
                <field name="phone" string="üìû Phone"/>
                <field name="email" string="‚úâÔ∏è Email" optional="hide"/>
                <field name="type" string="üè∑Ô∏è Type"/>

                <field name="supplier_type" string="üåç Supplier Type" optional="show"/>
                <field name="evaluation_score" string="‚≠ê Score" optional="hide"/>
                <field name="evaluation_state" string="‚úÖ Eval Status" optional="hide"/>

                <field name="is_local_supplier" string="üè† Local" optional="hide"/>
                <field name="is_international_supplier" string="üåê International" optional="hide"/>

                <field name="default_shipping_port" string="‚öì Port" optional="hide"/>
                <field name="incoterm" string="üì¶ Incoterm" optional="hide"/>

                <field name="trade_license_no" string="üßæ License" optional="hide"/>
                <field name="tax_number" string="üèõÔ∏è Tax" optional="hide"/>
                <field name="contract_document" string="üìé Contract" optional="hide"/>

                <field name="currency_id" string="üí± Currency" optional="hide"/>
                <field name="account_payable_id" string="üìí Payable" optional="hide"/>

                <field name="opening_balance" string="üü¶ Opening" sum="total" optional="hide"/>
                <field name="total_due_amount" string="üü• Due" sum="total" optional="hide"/>

                <field name="status" string="üîò Status" widget="boolean_toggle" optional="hide"/>
                <field name="vendor_status" string="üö¶ Vendor Status"/>

                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- ============================= -->
    <!-- Vendor: Search View -->
    <!-- ============================= -->
    <record id="view_idil_vendor_search" model="ir.ui.view">
        <field name="name">idil.vendor.search</field>
        <field name="model">idil.vendor.registration</field>
        <field name="arch" type="xml">
            <search string="üîé Search Vendors">
                <field name="name" string="üë§ Vendor"/>
                <field name="phone" string="üìû Phone"/>
                <field name="email" string="‚úâÔ∏è Email"/>
                <field name="type" string="üè∑Ô∏è Type"/>
                <field name="supplier_type" string="üåç Supplier Type"/>
                <field name="vendor_status" string="üö¶ Vendor Status"/>
                <field name="evaluation_state" string="‚úÖ Eval Status"/>

                <separator/>

                <filter name="active_vendors" string="‚úÖ Active" domain="[('active', '=', True)]"/>
                <filter name="inactive_vendors" string="üö´ Inactive" domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="local_suppliers" string="üè† Local Suppliers" domain="[('supplier_type', '=', 'local')]"/>
                <filter name="international_suppliers" string="üåê International Suppliers" domain="[('supplier_type', '=', 'international')]"/>

                <separator/>

                <group expand="0" string="üìå Group By">
                    <filter name="group_by_type" string="üè∑Ô∏è Type" domain="[]" context="{'group_by': 'type'}"/>
                    <filter name="group_by_supplier_type" string="üåç Supplier Type" domain="[]" context="{'group_by': 'supplier_type'}"/>
                    <filter name="group_by_vendor_status" string="üö¶ Vendor Status" domain="[]" context="{'group_by': 'vendor_status'}"/>
                    <filter name="group_by_eval_state" string="‚úÖ Eval Status" domain="[]" context="{'group_by': 'evaluation_state'}"/>
                    <filter name="group_by_currency" string="üí± Currency" domain="[]" context="{'group_by': 'currency_id'}"/>
                </group>

                <searchpanel>
                    <field name="supplier_type" string="üåç Supplier Type" enable_counters="1"/>
                    <field name="vendor_status" string="üö¶ Vendor Status" enable_counters="1"/>
                    <field name="type" string="üè∑Ô∏è Vendor Type" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- ============================= -->
    <!-- Vendor: Form View -->
    <!-- ============================= -->
    <record id="view_idil_vendor_form" model="ir.ui.view">
        <field name="name">idil.vendor.form</field>
        <field name="model">idil.vendor.registration</field>
        <field name="arch" type="xml">
            <form string="üè¢ Vendor Profile">
                <sheet>

                    <!-- Top header -->
                    <div class="oe_title">
                        <div class="o_row">
                            <div class="o_col">
                                <label for="name" class="oe_edit_only"/>
                                <h1>
                                    <field name="name" placeholder="Vendor Name..."/>
                                </h1>
                            </div>
                        </div>
                    </div>

                    <!-- Quick stats -->
                    <div class="o_row" style="margin-top: 8px; margin-bottom: 10px;">
                        <div class="o_col">
                            <group col="6">
                                <field name="total_due_amount" string="üü• Total Due" readonly="1"/>
                                <field name="opening_balance" string="üü¶ Opening Balance" readonly="1"/>
                                <field name="currency_id" string="üí± Currency"/>
                                <field name="vendor_status" string="üö¶ Vendor Status"/>
                                <field name="status" string="üîò Status" widget="boolean_toggle"/>
                                <field name="active" string="‚úÖ Active"/>
                            </group>
                        </div>
                    </div>

                    <!-- Main information blocks -->
                    <group string="üßæ Vendor Information" col="2">
                        <field name="image" widget="image" class="oe_avatar" options="{'size': [128, 128]}"/>
                        <field name="type" string="üè∑Ô∏è Vendor Type"/>
                        <field name="supplier_type" string="üåç Supplier Type"/>
                        <field name="payment_term" string="üìÖ Payment Term"/>
                    </group>

                    <group string="‚≠ê Evaluation" col="2">
                        <field name="evaluation_score" string="‚≠ê Score"/>
                        <field name="evaluation_state" string="‚úÖ Status"/>
                        <field name="is_local_supplier" string="üè† Local Procurement"/>
                        <field name="is_international_supplier" string="üåê International Procurement"/>
                    </group>

                    <notebook>

                        <!-- Contact -->
                        <page string="üìû Contact">
                            <group string="üìá Contact Details" col="2">
                                <field name="phone" string="üìû Phone"/>
                                <field name="email" string="‚úâÔ∏è Email"/>
                            </group>

                            <group string="üß© Compliance &amp; Documents" col="2">
                                <field name="trade_license_no" string="üßæ Trade License No"/>
                                <field name="tax_number" string="üèõÔ∏è Tax Number"/>
                                <field name="contract_document" string="üìé Contract Document"/>
                            </group>
                        </page>

                        <!-- Accounting -->
                        <page string="üíº Accounting">
                            <group string="üìí Accounts" col="2">
                                <field name="account_payable_id" string="üìå Account Payable"/>
                                <field name="account_receivable_id" string="üìå Account Receivable"/>
                            </group>

                            <group string="üí≥ Terms" col="2">
                                <field name="payment_term" string="üìÖ Payment Term"/>
                                <field name="currency_id" string="üí± Vendor Currency"/>
                            </group>

                            <group string="üìä Financial Transactions">
                                <field name="financial_transactions" readonly="1"/>
                            </group>
                        </page>

                        <!-- Logistics (for International) -->
                        <page string="üö¢ Logistics">
                            <group string="üì¶ Shipping Setup" col="2">
                                <field name="default_shipping_port" string="‚öì Default Shipping Port"/>
                                <field name="incoterm" string="üì¶ Incoterm"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================= -->
    <!-- Vendor: Action -->
    <!-- ============================= -->
    <record id="action_idil_vendor" model="ir.actions.act_window">
        <field name="name">üè¢ Vendors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">idil.vendor.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vendor and keep procurement operations organized.
            </p>
            <p>
                Track supplier type (Local/International), evaluation score, payment terms, accounting setup, and due balances.
            </p>
        </field>
    </record>

</odoo>
