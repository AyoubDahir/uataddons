<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_production_profitability_wizard_form" model="ir.ui.view">
            <field name="name">idil.production.profitability.wizard.form</field>
            <field name="model">idil.production.profitability.wizard</field>
            <field name="arch" type="xml">
                <form string="Production Profitability Report">
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_view_report" string="View Report" type="object" class="btn-primary"/>
                        <button name="action_print_pdf" string="Download PDF" type="object" class="btn-secondary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_view_production_profitability_wizard" model="ir.actions.act_window">
            <field name="name">Production Profitability</field>
            <field name="res_model">idil.production.profitability.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
